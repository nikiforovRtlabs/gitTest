<?xml version='1.0' encoding='UTF-8'?>
<wgt:form xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-2.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0"
      xmlns:fs2="http://n2oapp.net/framework/config/schema/fieldset-2.0">

    <wgt:object-id>hosp_report</wgt:object-id>
    <wgt:name>Массовая печать дневников по врачу</wgt:name>

    <wgt:edit model="default" form-submit-label="Сформировать отчет" after-submit="closeModal" refresh-after-submit="false">
        <wgt:a href="${rmis.report.url}?__report=tatar/diary_period_emolyee.rptdesign&amp;doctor_id=:doctor.id:&amp;service_id=:services:&amp;from_dt=:periodBeginDt:&amp;to_dt=:periodEndDt:&amp;__format=pdf"/>
    </wgt:edit>

        <fs2:field-set>
            <ctrl:hidden id="doctor.id" default-value="#{emplPos.id}"/>

            <fs2:row>
                <ctrl:date-time id="periodBeginDt" label="Период с" format="DD.MM.YYYY HH:mm"
                                required="true"
                                default-value="today()"
                                control-style="width:170px;">
                    <ctrl:validations>
                        <ctrl:validation ref-id="periodValidation" side="client"/>
                    </ctrl:validations>
                </ctrl:date-time>

                <ctrl:date-time id="periodEndDt" label="по" format="DD.MM.YYYY HH:mm"
                             required="true"
                             default-value="now()"
                             control-style="width:170px;"
                             label-style="width:20px;">
                    <ctrl:validations>
                        <ctrl:validation ref-id="periodValidation" side="client"/>
                    </ctrl:validations>
                </ctrl:date-time>
            </fs2:row>

            <!-- Example: '[1,267,37567]'; -->
            <ctrl:hidden id="services">
                <ctrl:set-value-expression on="doctor.id">
                    '[]';
                </ctrl:set-value-expression>
            </ctrl:hidden>

        </fs2:field-set>
</wgt:form>

