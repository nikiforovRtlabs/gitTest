<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-2.0"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">
    <name>productionDoc</name>
    <object-id>productionDoc</object-id>
    <execution>
        <n2o:sql>
            <n2o:items-query>select :select
                from inventory.production_doc pd
                inner join inventory.document doc on doc.id = pd.id
                where :where
            </n2o:items-query>
            <n2o:count-query>select 1
            </n2o:count-query>
            <n2o:alias>pd</n2o:alias>
        </n2o:sql>
    </execution>

    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
        </field>
        <field>
            <id>org.id</id>
            <domain>integer</domain>
            <expression>doc.org_id</expression>
        </field>
        <field>
            <id>docType.id</id>
            <domain>integer</domain>
            <expression>doc.int_doc_type_id</expression>
        </field>
        <field>
            <id>docNumber</id>
            <domain>string</domain>
            <expression>doc.int_doc_number</expression>
        </field>
        <field>
            <id>appProdDocNumber.id</id>
            <domain>integer</domain>
            <expression>pd.app_prod_doc_number_id</expression>
        </field>
        <field>
            <id>docDate</id>
            <domain>date</domain>
            <expression>doc.int_doc_dt</expression>
        </field>
        <field>
            <id>baseDocType.id</id>
            <domain>integer</domain>
            <expression>pd.base_doc_type_id</expression>
        </field>
        <field>
            <id>baseDocNumber</id>
            <domain>string</domain>
            <expression>pd.base_doc_number</expression>
        </field>
        <field>
            <id>baseDocDate</id>
            <domain>date</domain>
            <expression>pd.base_doc_date</expression>
        </field>
        <field>
            <id>sendStore.id</id>
            <domain>integer</domain>
            <expression>pd.send_store_id</expression>
        </field>
        <field>
            <id>arrStoreOpr.id</id>
            <domain>integer</domain>
            <expression>pd.store_opr_arr_id</expression>
        </field>
        <field>
            <id>expStoreOpr.id</id>
            <domain>integer</domain>
            <expression>pd.store_opr_exp_id</expression>
        </field>
        <field>
            <id>fundSource.id</id>
            <domain>integer</domain>
            <expression>pd.fund_source_id</expression>
        </field>
        <field>
            <id>formulaDoc.id</id>
            <domain>integer</domain>
            <expression>pd.formula_doc_id</expression>
        </field>
        <field>
            <id>modif.id</id>
            <domain>integer</domain>
            <expression>pd.modif_id</expression>
        </field>
        <field>
            <id>mneiQuantity</id>
            <domain>string</domain>
            <expression>trim(to_char(pd.mnei_quantity, 'FM999999990.999999'), '.')</expression>
        </field>
        <field>
            <id>price</id>
            <domain>string</domain>
            <expression>trim(to_char(pd.price, 'FM999999999990.99999'), '.')</expression>
        </field>
        <field>
            <id>amount</id>
            <domain>string</domain>
            <expression>trim(to_char(pd.amount, 'FM999999999999990.999'), '.')</expression>
        </field>
        <field>
            <id>series</id>
            <domain>string</domain>
            <expression>pd.series</expression>
        </field>
        <field>
            <id>expireDate</id>
            <domain>date</domain>
            <expression>pd.expire_date</expression>
        </field>
        <field>
            <id>certificate</id>
            <domain>string</domain>
            <expression>pd.certificate</expression>
        </field>
        <field>
            <id>prodDate</id>
            <domain>date</domain>
            <expression>pd.prod_date</expression>
        </field>
        <field>
            <id>note</id>
            <domain>string</domain>
            <expression>pd.note</expression>
        </field>
        <field>
            <id>status.id</id>
            <domain>integer</domain>
            <expression>doc.doc_status_id</expression>
        </field>
    </fields>
</query>
