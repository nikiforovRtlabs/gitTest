<?xml version='1.0' encoding='UTF-8'?>
<table xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/n2o-widget-2.0">
    <name>Является ресурсом</name>
    <query-id>equResSimple</query-id>
    <size>5</size>
    <columns>
        <column column-field-id="code" name="Код"/>
        <column column-field-id="res_kind.name" name="Тип ресурса"/>
        <column column-field-id="power" name="Мощность"/>
    </columns>
    <action-menu>
        <menu-item id="create">
            <show-modal page-id="equResSimple" action-id="create" width="500px" create-more="true"
                        master-field-id="id_name" detail-field-id="id_name" />
        </menu-item>
        <menu-item id="update">
            <show-modal page-id="equResSimple" action-id="update" width="500px"
                        master-field-id="oid" detail-field-id="oid" />
        </menu-item>
        <menu-item id="delete">
            <invoke-action action-id="delete"/>
        </menu-item>
    </action-menu>
</table>
