<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-1.0">
    <name>Каталог</name>
    <object-id>metaDataTree2</object-id>
    <layout>n2o/layout/single</layout>
    <containers result-container="main">
        <container id="main" place="single">
            <wgt:form>
                <wgt:query-id>metaDataTree2</wgt:query-id>
                <wgt:field-set>
                    <ctrl:hidden id="id"/>
                    <ctrl:hidden id="catalog.id"/>
                    <ctrl:input-text id="name" label="Наименование" required="true">
                        <ctrl:validations>
                            <ctrl:validation ref-id="banSpace"/>
                        </ctrl:validations>
                    </ctrl:input-text>
                </wgt:field-set>
            </wgt:form>
        </container>
    </containers>
</page>
