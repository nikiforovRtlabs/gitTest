        </field>
        <field>
            <id>search</id>
            <domain>string</domain>
            <search unavailable="true"/>
            <name>SQL выражение для поиска</name>
        </field>
        <field>
            <id>sorting</id>
            <domain>string</domain>
            <search unavailable="true"/>
            <name>SQL выражение для сортировки</name>
        </field>
