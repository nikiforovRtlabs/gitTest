    <fields>
        <field>
            <id>id</id>
            <domain>String</domain>
            <sorting unavailable="true"/>
        </field>
        <field>
            <id>query.id</id>
            <domain>String</domain>
            <sorting unavailable="true"/>
        </field>
        <field>
            <id>query.name_compiled</id>
            <name>Выборка</name>
            <domain>String</domain>
            <search unavailable="true"/>
            <sorting unavailable="true"/>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <name>Наименование</name>
        </field>
        <field>
            <id>domain.id</id>
            <domain>string</domain>
        </field>
        <field>
            <id>domain.name</id>
            <name>Тип</name>
            <domain>string</domain>
        </field>
        <field>
            <id>expression</id>
            <domain>string</domain>
            <search unavailable="true"/>
            <name>SQL выражение</name>
