            <id>noDisplay</id>
            <domain>boolean</domain>
            <search unavailable="true"/>
            <name>Поле не отображается</name>
        </field>
        <field>
            <id>noSearch</id>
            <domain>boolean</domain>
            <search unavailable="true"/>
            <name>Поле не используется для поиска</name>
        </field>
        <field>
            <id>noSorting</id>
            <domain>boolean</domain>
            <search unavailable="true"/>
            <name>Поле не используется для сортировки</name>
        </field>
