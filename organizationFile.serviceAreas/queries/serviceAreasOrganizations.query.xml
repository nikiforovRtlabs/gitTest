<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-2.0">
    <object-id>dummy</object-id>
    <execution>
        <n2o:sql>
            <n2o:items-query>select :select
                from pim_organization t
                where t.id = any(array(select :org_id union all select select_organization_children_list(:org_id))) and :where
                order by t.full_name
            </n2o:items-query>
            <n2o:count-query>select count(t)
                from pim_organization t
                where t.id = any(array(select :org_id union all select select_organization_children_list(:org_id))) and :where
            </n2o:count-query>
        </n2o:sql>
    </execution>
    <fields>
        <field>
            <id>oid</id>
            <domain>integer</domain>
            <expression>t.id</expression>
            <display/>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <expression>t.full_name</expression>
            <display/>
            <search filter-field="name">upper(:expression) like '%'||upper(:name)||'%'</search>
        </field>
        <field>
            <id>org_id</id>
            <domain>integer</domain>
            <expression>:org_id</expression>
            <search value="#{stocks.orgId?}">(:expression = :org_id or :org_id is null)</search>
        </field>
    </fields>
</query>