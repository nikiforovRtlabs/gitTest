<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-2.0"
      xmlns:fs="http://n2oapp.net/framework/config/schema/fieldset-2.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0">
    <object-id>nonpayment</object-id>
    <layout>n2o/layout/single</layout>
    <regions>
        <region place="single" type="none">
            <container id="main">
                <wgt:form>
                    <wgt:query-id>nonpayment</wgt:query-id>
                    <fs:field-set>
                        <ctrl:hidden id="oid"/>
                        <ctrl:hidden id="employee_id"/>
                        <ctrl:classifier id="type" label="Причина" required="true">
                            <ctrl:query query-id="nonpaymentTypes" value-field-id="oid" label-field-id="name"/>
                        </ctrl:classifier>
                        <ctrl:date-time id="from_dt" label="Дата начала" format="DD.MM.YYYY" required="true">
                            <ctrl:validations>
                                <ctrl:validation ref-id="checkFromDt" side="client"/>
                            </ctrl:validations>
                        </ctrl:date-time>
                        <ctrl:date-time id="to_dt" label="Дата окончания" format="DD.MM.YYYY" required="true">
                            <ctrl:validations>
                                <ctrl:validation ref-id="checkToDt" side="client"/>
                            </ctrl:validations>
                        </ctrl:date-time>
                    </fs:field-set>
                </wgt:form>
            </container>
        </region>
    </regions>

</page>
