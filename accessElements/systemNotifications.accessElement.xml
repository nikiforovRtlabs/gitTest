<element xmlns="http://atria.cz/sec/config/schema/element-1.0"
         xmlns:n2o="http://atria.cz/sec/config/schema/n2o-permission-1.0"
         name="Системные оповещения">

    <permission id="readSystemNotification" name="Просмотр оповещений" group-id="read">
        <n2o:object-access object-id="systemNotification"/>
    </permission>

    <permission id="createSystemNotification" name="Создание оповещений" group-id="create">
        <n2o:object-access object-id="systemNotification" actions="create"/>
    </permission>

    <permission id="updateSystemNotification" name="Редактирование оповещений" group-id="update">
        <n2o:object-access object-id="systemNotification" actions="update"/>
    </permission>

    <permission id="deleteSystemNotification" name="Удаление оповещений" group-id="delete">
        <n2o:object-access object-id="systemNotification" actions="delete"/>
    </permission>

    <permission id="createNotificationEvent" name="Создание событий" group-id="create">
        <n2o:object-access object-id="event" actions="create"/>
    </permission>

    <permission id="updateNotificationEvent" name="Редактирование событий" group-id="update">
        <n2o:object-access object-id="event" actions="update"/>
    </permission>


</element>