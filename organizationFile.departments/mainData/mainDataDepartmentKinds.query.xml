<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-2.0">
    <object-id>departmentsDummy</object-id>
    <name>mainDataDepartmentKinds</name>
    <execution>
        <n2o:sql>
            <n2o:items-query>select :select
                from pim_department_kind k
                where :where
                order by k.name
            </n2o:items-query>
            <n2o:count-query>select count(k)
                from pim_department_kind k
                where :where
            </n2o:count-query>
        </n2o:sql>
    </execution>
    <fields>
        <field>
            <id>oid</id>
            <domain>integer</domain>
            <expression>k.id</expression>
            <display/>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <expression>k.name</expression>
            <display/>
            <search filter-field="name">upper(:expression) like '%'||upper(:name)||'%'</search>
        </field>
    </fields>
</query>
