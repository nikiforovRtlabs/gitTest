<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-2.0">
    <object-id>partogramHeartbeat</object-id>
    <name>partogramHeartbeat</name>
    <execution>
        <n2o:sql>
            <n2o:items-query>
                select :select
                from public.sr_srv_rendered ssr
                inner join motherhood.mh_pregnant_outcome mpo on mpo.service_id = ssr.id
                left join motherhood.mh_pregnant_outcome_temperature poh on poh.pregnant_outcome_id = mpo.id
                where :where
                group by ssr.bdate, ssr.begin_time
            </n2o:items-query>
            <n2o:count-query>
                select 1
            </n2o:count-query>
        </n2o:sql>
    </execution>

    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <expression>poh.id</expression>
            <search>:expression = :id</search>
            <display unavailable="true"/>
        </field>

        <field>
            <id>date</id>
            <domain>date</domain>
            <expression>coalesce(cast(max(date + time) + '01:00'::time as date), ssr.bdate)</expression>
        </field>

        <field>
            <id>time</id>
            <domain>string</domain>
            <expression>coalesce(to_char(max(date + time) + '01:00'::time, 'HH24:MI'), to_char(ssr.begin_time, 'HH24:MI'))</expression>
        </field>

        <field>
            <id>pregnantOutcomeId</id>
            <domain>integer</domain>
            <expression>mpo.id</expression>
            <search>:expression = :pregnantOutcomeId</search>
            <display unavailable="true"/>
        </field>
    </fields>
</query>
