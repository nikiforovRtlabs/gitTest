<element xmlns="http://atria.cz/sec/config/schema/element-1.0"
         xmlns:n2o="http://atria.cz/sec/config/schema/n2o-permission-1.0"
         id="settingsVaccine" name="Настройки">

    <permission id="create" name="Настройки. Добавление значений" group-id="create">
        <n2o:object-access object-id="vac_schema" actions="create"/>
        <n2o:object-access object-id="vac_schema_stage" actions="create"/>
        <n2o:object-access object-id="vac_schema_stage_vaccine" actions="create"/>
        <n2o:object-access object-id="vac_calendar" actions="create"/>
    </permission>

    <permission id="update" name="Настройки. Редактирование значений" group-id="update">
        <n2o:object-access object-id="vac_schema" actions="update"/>
        <n2o:object-access object-id="vac_schema_stage" actions="update"/>
        <n2o:object-access object-id="vac_schema_stage_vaccine" actions="update"/>
        <n2o:object-access object-id="vac_calendar" actions="update, attachSchema, detachSchema"/>
    </permission>

    <permission id="delete" name="Настройки. Удаление значений" group-id="delete">
        <n2o:object-access object-id="vac_schema" actions="delete"/>
        <n2o:object-access object-id="vac_schema_stage" actions="delete"/>
        <n2o:object-access object-id="vac_schema_stage_vaccine" actions="delete"/>
        <n2o:object-access object-id="vac_calendar" actions="delete"/>
    </permission>

    <permission id="read" name="Настройки. Чтение" group-id="read">
        <n2o:object-access object-id="vac_template"/>
        <n2o:object-access object-id="vac_schema"/>
        <n2o:object-access object-id="vac_schema_stage"/>
        <n2o:object-access object-id="vac_schema_stage_vaccine"/>
        <n2o:object-access object-id="vac_calendar"/>
    </permission>

</element>