<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-2.0">
    <object-id>producer_control</object-id>
    <name>producer_control</name>
    <execution>
        <n2o:sql>
            <n2o:items-query>select :select
                from vac_producer vp
                join vac_country vc
                on vp.country_id = vc.id
                where :where
                order by :order
            </n2o:items-query>
            <n2o:count-query>select count(vc)
                from vac_producer vp
                join vac_country vc
                on vp.country_id = vc.id
                where :where
            </n2o:count-query>
        </n2o:sql>
    </execution>

    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <display>vp.id</display>
        </field>
        <field>
            <id>label</id>
            <domain>string</domain>
            <display>vp.label</display>
            <expression>vp.label</expression>
            <search>trim(upper(:expression)) like '%'||trim(upper(:label))||'%'</search>
        </field>
        <field>
            <id>countryId</id>
            <domain>integer</domain>
            <display>vc.id</display>
        </field>
        <field>
            <id>countryLabel</id>
            <domain>string</domain>
            <display>vc.full_name</display>
        </field>
    </fields>
</query>
