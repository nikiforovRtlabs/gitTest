<query xmlns="http://n2oapp.net/framework/config/schema/query-2.0"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">
    <object-id>arrivalInvoice</object-id>
    <execution>
        <n2o:sql>
            <n2o:items-query>select :select
                from inventory.arrival_invoice arr
                     inner join inventory.document doc on doc.id=arr.id
                where :where
                order by :order
            </n2o:items-query>
            <n2o:count-query>select count(arr)
                from inventory.arrival_invoice arr
                where :where
            </n2o:count-query>
            <n2o:alias>arr</n2o:alias>
        </n2o:sql>
    </execution>

    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
        </field>
        <field>
            <id>arrInvoiceId</id>
            <domain>integer</domain>
            <expression>arr.id</expression>
            <search>:expression = :id</search>
        </field>
        <field>
            <id>extDocType.id</id>
            <domain>integer</domain>
            <expression>arr.ext_doc_type_id</expression>
        </field>
        <field>
            <id>extDocNumber</id>
            <domain>string</domain>
            <expression>arr.ext_doc_number</expression>
        </field>
        <field>
            <id>extDocDate</id>
            <domain>date</domain>
            <expression>arr.ext_doc_dt</expression>
        </field>
        <field>
            <id>contractor.id</id>
            <domain>integer</domain>
            <expression>arr.contractor_id</expression>
        </field>
        <field>
            <id>shipper.id</id>
            <domain>integer</domain>
            <expression>arr.shipper_id</expression>
        </field>
        <field>
            <id>baseDoc.id</id>
            <domain>integer</domain>
            <expression>arr.base_doc_id</expression>
        </field>
        <field>
            <id>docType.id</id>
            <domain>integer</domain>
            <expression>doc.int_doc_type_id</expression>
        </field>
        <field>
            <id>docNumber</id>
            <domain>string</domain>
            <expression>doc.int_doc_number</expression>
        </field>
        <field>
            <id>docDate</id>
            <domain>date</domain>
            <expression>doc.int_doc_dt</expression>
        </field>
        <field>
            <id>recipient.id</id>
            <domain>integer</domain>
            <expression>arr.recipient_store_id</expression>
        </field>
        <field>
            <id>amountPlan</id>
            <domain>string</domain>
            <expression>arr.amount_plan</expression>
        </field>
        <field>
            <id>amountFact</id>
            <domain>string</domain>
            <expression>arr.amount_fact</expression>
        </field>
        <field>
            <id>note</id>
            <domain>string</domain>
            <expression>arr.note</expression>
        </field>
        <field>
            <id>storeOpr.id</id>
            <domain>integer</domain>
            <expression>arr.store_opr_id</expression>
        </field>
        <field>
            <id>vat</id>
            <domain>integer</domain>
            <expression>18</expression>
        </field>
        <field>
            <id>countOfSpec</id>
            <domain>integer</domain>
            <expression>(select count(s.id) from inventory.arrival_spec s where s.doc_id=arr.id)</expression>
        </field>
        <field>
            <id>isExecuted</id>
            <domain>boolean</domain>
            <expression>doc.doc_status_id=2</expression>
        </field>
        <field>
            <id>existsExecutedSpec</id>
            <domain>boolean</domain>
            <expression>coalesce(exists(select * from inventory.arrival_spec s where s.doc_id=arr.id and s.status_id=2), false)</expression>
        </field>
        <field>
            <id>fundSource.id</id>
            <domain>integer</domain>
            <expression>arr.fund_source_id</expression>
        </field>
        <field>
            <id>org.id</id>
            <domain>integer</domain>
            <expression>doc.org_id</expression>
        </field>
        <field>
            <id>emplPos.id</id>
            <domain>integer</domain>
            <expression>arr.resp_emp_pos_id</expression>
        </field>
        <field>
            <id>finContractType.id</id>
            <domain>integer</domain>
            <expression>
                (select id from public.fin_contract_type where code='SINGLE_DRUG_SUPPLY')
            </expression>
        </field>
        <field>
            <id>procurementMethod.id</id>
            <domain>integer</domain>
            <expression>arr.procurement_method_id</expression>
        </field>
    </fields>
</query>