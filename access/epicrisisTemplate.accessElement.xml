<element xmlns="http://atria.cz/sec/config/schema/element-1.0"
         xmlns:n2o="http://atria.cz/sec/config/schema/n2o-permission-1.0"
         id="epicrisisTemplate" name="Настройки эпикризов">

    <permission id="read" name="Просмотр настройки эпикриза" group-id="read">
        <n2o:object-access object-id="epicrisis_template">
            <n2o:slicer id="org" group-id="read" field-id="clinic.id"/>
        </n2o:object-access>
    </permission>

    <permission id="create" name="Создание настройки эпикриза" group-id="create">

        <n2o:object-access object-id="epicrisis_template" actions="create"/>
    </permission>

    <permission id="copy" name="Копирование настройки эпикриза" group-id="create">
        <n2o:object-access object-id="epicrisis_template" actions="copy"/>
    </permission>

    <permission id="update" name="Редактирование настройки эпикриза" group-id="update">
        <n2o:object-access object-id="epicrisis_template" actions="update"/>
    </permission>

    <permission id="delete" name="Удаление настройки эпикриза" group-id="delete">
        <n2o:object-access object-id="epicrisis_template" actions="delete"/>
    </permission>

</element>