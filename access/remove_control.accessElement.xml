<element xmlns="http://atria.cz/sec/config/schema/element-1.0"
         xmlns:n2o="http://atria.cz/sec/config/schema/n2o-permission-1.0"
         id="remove_control" name="Картотека условий снятия с контроля">
    <!--Просмотр-->
    <permission id="read" name="Просмотр" group-id="read">
        <n2o:object-access object-id="remove_control_to_event"/>
    </permission>

    <!--Создание-->
    <permission id="create" name="Создание" group-id="create">
        <n2o:object-access object-id="remove_control_to_event" actions="create"/>
    </permission>

    <!--Редактирование-->
    <permission id="edit" name="Редактирование" group-id="update">
        <n2o:object-access object-id="remove_control_to_event" actions="update"/>
    </permission>

    <!--Удаление-->
    <permission id="delete" name="Удаление" group-id="delete">
        <n2o:object-access object-id="remove_control_to_event" actions="delete"/>
    </permission>


</element>