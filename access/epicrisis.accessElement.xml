<element xmlns="http://atria.cz/sec/config/schema/element-1.0"
         xmlns:n2o="http://atria.cz/sec/config/schema/n2o-permission-1.0"
         id="epicrisis" name="Эпикризы">

    <permission id="read" name="Просмотр списка эпикризов" group-id="read">
        <n2o:container-access page="medicalHistoryForm" containers="epicrisis"/>
        <n2o:menu-access page="medicalHistoryForm" container="epicrisis" menu-items="read"/>
    </permission>

    <permission id="create" name="Создание эпикриза" group-id="create">
        <n2o:menu-access page="medicalHistoryForm" container="epicrisis" menu-items="create"/>
    </permission>

    <permission id="copy" name="Копирование эпикриза" group-id="create">
        <n2o:menu-access page="medicalHistoryForm" container="epicrisis" menu-items="copy"/>
    </permission>

    <permission id="share" name="Формирование эпикриза" group-id="update">
        <n2o:menu-access page="medicalHistoryForm" container="epicrisis" menu-items="shape"/>
    </permission>

    <permission id="update" name="Редактирование эпикриза" group-id="update">
        <n2o:menu-access page="medicalHistoryForm" container="epicrisis" menu-items="update"/>
    </permission>

    <permission id="delete" name="Удаление эпикриза" group-id="delete">
        <n2o:menu-access page="medicalHistoryForm" container="epicrisis" menu-items="delete"/>
    </permission>

</element>