<query xmlns="http://n2oapp.net/framework/config/schema/query-3.0"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">
    <object-id>stocks_classifier</object-id>
    <execution>
        <n2o:sql>
            <n2o:items-query>select :select
                from pim_equipment_idle_reason idle
                where :where
                order by :order
            </n2o:items-query>
            <n2o:count-query>select count(1)
                from pim_equipment_idle_reason idle
                where :where
            </n2o:count-query>
        </n2o:sql>
    </execution>

    <fields>

        <field>
            <id>id</id>
            <domain>integer</domain>
            <expression>idle.id</expression>
            <filters auto-generate="true"/>
            <display/>
        </field>

        <field>
            <id>name</id>
            <domain>string</domain>
            <expression>idle.name</expression>
            <filters>
                <filter type="eq" filter-field="name">upper(:expression) like '%'||upper(:name)||'%'</filter>
            </filters>
            <display/>
        </field>

    </fields>

</query>