<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-3.0">
    <object-id>stocks_classifier</object-id>
    <name>stocks_clinic_department_kinds</name>
    <execution>
        <n2o:sql>
            <n2o:items-query>select :select
                from pim_department_kind k
                where :where
                order by :order
            </n2o:items-query>
            <n2o:count-query>select count(k)
                from pim_department_kind k
                where :where
            </n2o:count-query>
        </n2o:sql>
    </execution>

    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <expression>k.id</expression>
            <display/>
            <sorting/>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <expression>k.name</expression>
            <display/>
            <filters>
                <filter type="eq" filter-field="name">
                    upper(:expression) like '%'||upper(:name)||'%'
                </filter>
            </filters>
        </field>
        <field>
            <id>clinic_id</id>
            <domain>integer</domain>
            <expression>1=1</expression>
            <display/>
            <filters>
                <filter type="eq" filter-field="clinic_id">
                    exists (
                      select id from pim_department
                      where kind_id = k.id and org_id = :clinic_id
                    )
                </filter>
            </filters>
        </field>

    </fields>
</query>
