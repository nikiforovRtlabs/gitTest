<query xmlns="http://n2oapp.net/framework/config/schema/query-3.0"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">
    <object-id>stocks_classifier</object-id>
    <execution>
        <n2o:sql>
            <n2o:items-query>select :select
                from pim_building bld
                where :where
                order by :order
            </n2o:items-query>
            <n2o:count-query>select count(1)
                from pim_building bld
                where :where
            </n2o:count-query>
            <n2o:alias>bld</n2o:alias>
        </n2o:sql>
    </execution>

    <fields>

        <field>
            <id>id</id>
            <domain>integer</domain>
                <expression>bld.id</expression>
            <filters auto-generate="true"/>
            <display/>
        </field>

        <field>
            <id>bld.name</id>
            <domain>string</domain>
            <expression>bld.name</expression>
            <display/>
        </field>

        <field>
            <id>name</id>
            <domain>string</domain>
            <expression>bld.name</expression>
            <filters>
                <filter type="eq" filter-field="name">upper(bld.name) like '%'||upper(:name)||'%'</filter>
            </filters>
            <display/>
        </field>

        <field>
            <id>org_id</id>
            <domain>integer</domain>
            <expression>bld.org_id</expression>
            <filters>
                <filter type="eq" filter-field="org_id">
                    :expression = :org_id
                </filter>
            </filters>
            <display/>
        </field>

    </fields>

</query>