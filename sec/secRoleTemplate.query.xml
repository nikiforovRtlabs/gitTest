<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-2.0"
       xmlns:java="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">

    <object-id>secRoleTemplate</object-id>

    <execution>
        <java:java-criteria bean-name="roleTemplateService"
                            criteria-class="ru.kirkazan.rmis.app.security.admin.api.RoleTemplateCriteria"/>
    </execution>
    <fields>
        <field>
            <id>id</id>
            <domain>String</domain>
        </field>
        <field>
            <id>name</id>
            <domain>String</domain>
            <name>Наименование</name>
            <sorting unavailable="true"/>
        </field>
        <field>
            <id>exists</id>
            <domain>boolean</domain>
            <name>Есть ли роли?</name>
            <sorting unavailable="true"/>
            <search unavailable="true"/>
        </field>

        <field>
            <id>newName</id>
            <domain>String</domain>
            <sorting unavailable="true"/>
        </field>

        <field>
            <id>type.id</id>
            <domain>integer</domain>
            <sorting unavailable="true"/>
            <display unavailable="true"/>
        </field>

        <field>
            <id>org.id</id>
            <domain>integer</domain>
            <sorting unavailable="true"/>
            <display unavailable="true"/>
        </field>

        <field>
            <id>full.info</id>
            <domain>boolean</domain>
            <sorting unavailable="true"/>
            <display unavailable="true"/>
        </field>

        <field>
            <id>system</id>
            <domain>boolean</domain>
            <sorting unavailable="true"/>
            <display unavailable="true"/>
        </field>
        <field>
            <id>group</id>
            <domain>string</domain>
            <name>Группа</name>
        </field>
        <field>
            <id>hasGroup</id>
            <domain>boolean</domain>
            <name>Есть ли группа?</name>
            <sorting unavailable="true"/>
        </field>
    </fields>
</query>