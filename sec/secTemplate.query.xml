            <sorting unavailable="true"/>
        </field>
        <field>
            <id>roleName</id>
            <domain>string</domain>
            <sorting unavailable="true"/>
        </field>
        <field>
            <id>group.name</id>
            <domain>string</domain>
            <name>Группа</name>
