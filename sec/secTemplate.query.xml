        <field>
            <id>isInvalid</id>
            <domain>boolean</domain>
            <sorting unavailable="true"/>
        </field>
        <field>
            <id>invalidMessage</id>
            <domain>string</domain>
        </field>
        <field>
            <id>warning</id>
