            <id>code</id>
            <domain>string</domain>
            <name>Код</name>
            <sorting unavailable="true"/>
        </field>
        <field>
            <id>n2oClass</id>
            <domain>string</domain>
            <search unavailable="true"/>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <name>Наименование</name>
            <sorting unavailable="true"/>
        </field>
        <field>
            <id>statusName</id>
            <domain>string</domain>
            <name>Статус</name>
            <search unavailable="true"/>
