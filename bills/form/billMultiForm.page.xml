<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:fs="http://n2oapp.net/framework/config/schema/fieldset-2.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-2.0">

    <object-id>bills</object-id>
    <layout>n2o/layout/single</layout>
    <name>Карточка счета</name>

    <regions>
        <region place="single" type="none" name="Карточка счета">
            <container id="main">
                <pre-filters>
                    <pre-filter field-id="serviceIds" value="${payment.paymentControlList.services:id}"/>
                </pre-filters>

                <wgt:form>
                    <wgt:query-id>billMultiFormDefaults</wgt:query-id>
                    <wgt:default-values-query-id>billMultiFormDefaults</wgt:default-values-query-id>
                    <wgt:name>Карточка счета</wgt:name>

                    <fs:field-set field-label-location="top">

                        <fs:row>
                            <ctrl:hidden id="id"/>
                            <ctrl:hidden id="serviceIds" domain="integer[]"/>
                            <ctrl:hidden id="services"/>

                            <ctrl:date-time id="periodTo" visible="false"/>

                            <ctrl:date-time id="periodFrom" visible="false"/>

                            <ctrl:input-text id="number"
                                             required="true"
                                             control-style="width:400px;"
                                             label="Номер счета"/>
                        </fs:row>
                        <fs:row>
                            <ctrl:date-time id="billDate"
                                            required="true"
                                            control-style="width:400px;"
                                            label="Дата счета" default-value="today()"/>
                        </fs:row>
                        <fs:row>
                            <ctrl:classifier id="org"
                                             label="Основная МО"
                                             required="true"
                                             search-as-you-type="true"
                                             control-style="width:400px;"
                                             autoselect-alone="true">
                                <ctrl:query query-id="pm_org_by_access_key"
                                            value-field-id="id"
                                            label-field-id="name"/>
                                <ctrl:default-model>
                                    <ctrl:value field-id="id">#{org.id}</ctrl:value>
                                    <ctrl:value field-id="name">#{org.name}</ctrl:value>
                                </ctrl:default-model>
                            </ctrl:classifier>
                        </fs:row>
                        <fs:row>
                            <ctrl:classifier id="finType"
                                             label="Вид финансирования"
                                             required="true"
                                             control-style="width:400px;"
                                             search-as-you-type="true">
                                <ctrl:query query-id="pm_funding_source_payment"
                                            value-field-id="id"
                                            label-field-id="name">
                                </ctrl:query>
                            </ctrl:classifier>
                        </fs:row>

                        <fs:row>
                            <ctrl:radio-group id="payerType"
                                              label="Тип плательщика"
                                              inline="true"
                                              control-style="width:350px;"
                                              required="true">
                                <ctrl:options>
                                    <ctrl:option>{"id" : 1, "name" : "Физ. лицо"}</ctrl:option>
                                    <ctrl:option>{"id" : 2, "name" : "Юр. лицо"}</ctrl:option>
                                </ctrl:options>
                                <ctrl:default-model>
                                    <ctrl:value field-id="id">1</ctrl:value>
                                    <ctrl:value field-id="name">Физ. лицо</ctrl:value>
                                </ctrl:default-model>
                            </ctrl:radio-group>
                        </fs:row>

                        <fs:row>
                            <ctrl:classifier id="payer"
                                             label="Плательщик"
                                             control-style="width:400px;"
                                             required="true">
                                <ctrl:query query-id="pm_party" value-field-id="id" label-field-id="name">
                                    <ctrl:pre-filters>
                                        <ctrl:pre-filter field-id="type" ref="payerType.id"/>
                                    </ctrl:pre-filters>
                                </ctrl:query>
                            </ctrl:classifier>
                        </fs:row>

                        <fs:row>
                            <ctrl:classifier id="contract"
                                             label="Договор"
                                             control-style="width:400px;"
                                             search-as-you-type="true" autoselect-alone="true">
                                <ctrl:query query-id="pm_contract_bill_services"
                                            value-field-id="id"
                                            label-field-id="name">
                                    <ctrl:pre-filters>
                                        <ctrl:pre-filter field-id="finType" ref="finType.id"/>
                                        <ctrl:pre-filter field-id="orgId" ref="org.id"/>
                                        <ctrl:pre-filter field-id="periodTo" ref="periodTo"/>
                                        <ctrl:pre-filter field-id="payerId" ref="payer.id"/>
                                        <ctrl:pre-filter field-id="serviceIds" ref="services"/>
                                    </ctrl:pre-filters>
                                </ctrl:query>
                            </ctrl:classifier>
                        </fs:row>
                        <fs:row>
                            <ctrl:classifier id="priceList"
                                             label="Прейскурант"
                                             required="true"
                                             control-style="width:400px;"
                                             search-as-you-type="true" autoselect-alone="true">
                                <ctrl:query query-id="pm_price_list"
                                            value-field-id="id"
                                            label-field-id="name">

                                    <ctrl:pre-filters>
                                        <ctrl:pre-filter field-id="clinicId" ref="org.id"/>
                                        <ctrl:pre-filter field-id="contract" ref="contract.id"/>
                                        <ctrl:pre-filter field-id="periodTo" ref="periodTo"/>
                                        <ctrl:pre-filter field-id="periodFrom" ref="periodFrom"/>
                                        <ctrl:pre-filter field-id="finType" ref="finType.id"/>
                                    </ctrl:pre-filters>
                                </ctrl:query>

                            </ctrl:classifier>
                        </fs:row>
                        <fs:row>
                            <ctrl:classifier id="discountCard"
                                             label="Дисконтная карта"
                                             control-style="width:400px;"
                                             search-as-you-type="true">
                                <ctrl:query query-id="pm_discount_card"
                                            value-field-id="id"
                                            label-field-id="number">
                                    <ctrl:pre-filters>
                                        <ctrl:pre-filter field-id="payerId" ref="payer.id"/>
                                    </ctrl:pre-filters>
                                </ctrl:query>
                            </ctrl:classifier>
                        </fs:row>
                    </fs:field-set>
                </wgt:form>
            </container>
        </region>
    </regions>
</page>
