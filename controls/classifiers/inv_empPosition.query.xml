<query xmlns="http://n2oapp.net/framework/config/schema/query-2.0"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">
    <object-id>inventory_classifier</object-id>
    <execution>
        <n2o:sql>
            <n2o:items-query>select :select
                from pim_employee_position ep
                inner join pim_position p on p.id=ep.position_id
                inner join pim_employee e on e.id=ep.employee_id
                inner join pim_individual ind on ind.id=e.individual_id
                where :where
                order by :order
            </n2o:items-query>
            <n2o:count-query>select count(ep)
                from pim_employee_position ep
                inner join pim_position p on p.id=ep.position_id
                inner join pim_employee e on e.id=ep.employee_id
                inner join pim_individual ind on ind.id=e.individual_id
                where :where
            </n2o:count-query>
            <n2o:alias>ep</n2o:alias>
        </n2o:sql>
    </execution>

    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <expression>ep.id</expression>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <expression>ind.surname||' '||lpad(ind.name,1,'.')||'.'||lpad(ind.patr_name,1,'.')||'.'||', '||p.name</expression>
            <search>upper(:expression) like '%'||upper(:name)||'%'</search>
        </field>
        <field>
            <id>org.id</id>
            <domain>integer</domain>
            <expression>p.organization_id</expression>
            <search>:expression = :org.id</search>
        </field>
    </fields>
</query>