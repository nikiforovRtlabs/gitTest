<query xmlns="http://n2oapp.net/framework/config/schema/query-2.0"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">
    <object-id>holding</object-id>
    <execution>
        <n2o:sql>
            <n2o:items-query>select :select
                from inventory.common_holding h
                where  :where
                order by :order
            </n2o:items-query>
            <n2o:count-query>select count(h)
                from inventory.common_holding h
                where :where
            </n2o:count-query>
            <n2o:alias>h</n2o:alias>
        </n2o:sql>
    </execution>
    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
        </field>
        <field>
            <id>holdId</id>
            <domain>integer</domain>
            <expression>h.id</expression>
            <search>h.id != :holdId</search>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <search>upper(name) like '%'||upper(:name)||'%'</search>
        </field>
    </fields>
</query>