<?xml version="1.0" encoding="UTF-8"?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-2.0">
    <object-id>phthisiatryReferral</object-id>
    <execution xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">
        <n2o:sql>
            <n2o:items-query>select :select from md_referral t where :where order by :order</n2o:items-query>
            <n2o:count-query>select count(t) from md_referral t where :where</n2o:count-query>
            <n2o:alias>t</n2o:alias>
        </n2o:sql>
    </execution>
    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
        </field>
        <field>
            <id>diagnosis_comment</id>
        </field>
        <field>
            <id>is_urgent</id>
            <domain>boolean</domain>
        </field>
        <field>
            <id>order_number</id>
        </field>
        <field>
            <id>referral_comment</id>
        </field>
        <field>
            <id>referral_date</id>
            <name>Дата</name>
            <domain>date</domain>
        </field>
        <field>
            <id>diagnosis.id</id>
            <domain>integer</domain>
            <expression>t.diagnosis_id</expression>
        </field>
        <field>
            <id>diagnosis.name</id>
            <domain>string</domain>
            <expression>
                (SELECT md_d.code || ' ' || md_d.name FROM public.md_diagnosis md_d WHERE md_d.id = t.diagnosis_id limit 1)
            </expression>
            <search unavailable="true"/>
        </field>
        <field>
            <id>ref_doctor.id</id>
            <domain>integer</domain>
            <expression>t.ref_doctor_id</expression>
        </field>
        <field>
            <id>funding.id</id>
            <domain>integer</domain>
            <expression>t.funding_id</expression>
        </field>
        <field>
            <id>ref_organization.id</id>
            <domain>integer</domain>
            <expression>t.ref_organization_id</expression>
        </field>
        <field>
            <id>patient.id</id>
            <domain>integer</domain>
            <expression>t.patient_id</expression>
        </field>
        <field>
            <id>prescription.id</id>
            <domain>integer</domain>
            <expression>t.prescription_id</expression>
        </field>
        <field>
            <id>recv_organization.id</id>
            <domain>integer</domain>
            <expression>t.recv_organization_id</expression>
        </field>
        <field>
            <id>recv_organization.name</id>
            <name>МО</name>
            <domain>integer</domain>
            <expression>
                (SELECT org.short_name FROM public.pim_organization org
                WHERE org.id = t.recv_organization_id)
            </expression>
        </field>
        <field>
            <id>service_pat.id</id>
            <domain>integer</domain>
            <expression>t.service_pat_id</expression>
        </field>
        <field>
            <id>referral_type.id</id>
            <domain>integer</domain>
            <expression>t.referral_type_id</expression>
        </field>
        <field>
            <id>referral_type.name</id>
            <domain>string</domain>
            <expression>(SELECT name FROM md_referral_type type WHERE type.id = t.referral_type_id limit 1)</expression>
        </field>
        <field>
            <id>recv_doctor.id</id>
            <domain>integer</domain>
            <expression>t.recv_doctor_id</expression>
        </field>
        <field>
            <id>department.id</id>
            <domain>integer</domain>
            <expression>t.department_id</expression>
        </field>
        <field>
            <id>note</id>
        </field>
        <field>
            <id>step_id</id>
            <domain>integer</domain>
        </field>
        <field>
            <id>service.id</id>
            <domain>integer</domain>
            <expression>t.service_id</expression>
        </field>
        <field>
            <id>goal.id</id>
            <domain>integer</domain>
            <expression>t.goal_id</expression>
        </field>
        <field>
            <id>recv_res_group.id</id>
            <domain>integer</domain>
            <expression>t.recv_res_group_id</expression>
        </field>
        <field>
            <id>date_cancel</id>
            <domain>date</domain>
        </field>
        <field>
            <id>cancel_reason.id</id>
            <domain>integer</domain>
            <expression>t.cancel_reason_id</expression>
        </field>
        <field>
            <id>cancel_source.id</id>
            <domain>integer</domain>
            <expression>t.cancel_source_id</expression>
        </field>
        <field>
            <id>ref_department.id</id>
            <domain>integer</domain>
            <expression>t.ref_department_id</expression>
        </field>
        <field>
            <id>comment</id>
        </field>
        <field>
            <id>status.id</id>
            <domain>integer</domain>
            <expression>t.status_id</expression>
        </field>
        <field>
            <id>cancel_reason_detail</id>
        </field>
        <field>
            <id>cancel_source_org</id>
            <domain>integer</domain>
        </field>
        <field>
            <id>cancel_source_dep</id>
            <domain>integer</domain>
        </field>
    </fields>
</query>

