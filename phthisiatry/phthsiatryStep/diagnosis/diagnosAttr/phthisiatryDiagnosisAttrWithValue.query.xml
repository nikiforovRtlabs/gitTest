<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-2.0"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">

    <object-id>phthisiatryDiagnosisAttrWithValue</object-id>

    <execution>
        <n2o:sql>
            <n2o:items-query>
                select :select
                from public.mc_diag_attr g
                join public.md_attr_value v on v.id = g.attr_value_id
                where :where
                order by :order
            </n2o:items-query>

            <n2o:count-query>
                select count(1)
                from public.mc_diag_attr g
                join public.md_attr_value v on v.id = g.attr_value_id
                where :where
            </n2o:count-query>
            <n2o:alias>g</n2o:alias>
        </n2o:sql>
    </execution>

    <fields>
        
        <field>
            <id>diagnosis_id</id>
            <domain>integer</domain>
        </field>
        
        <field>
            <id>attr.name</id>
            <name>Наименование</name>
            <domain>string</domain>
            <expression>
               (SELECT d_attr.full_name FROM public.md_diag_attr d_attr WHERE d_attr.id = v.diag_attr_id LIMIT 1)
            </expression>
        </field>

        <field>
            <id>value</id>
            <name>Значение</name>
            <domain>string</domain>
            <expression>v.name</expression>
        </field>

    </fields>
</query>