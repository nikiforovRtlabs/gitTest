<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-2.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0"
      xmlns:fs="http://n2oapp.net/framework/config/schema/fieldset-2.0"
      xsi:schemaLocation="http://n2oapp.net/framework/config/schema/page-1.0 http://localhost:8080/n2o/config/schema/page/page-1.0.xsd">
    <object-id>phthisiatryHospReferral</object-id>
    <layout>n2o/layout/single</layout>
    <name>Направление</name>
    <containers>
        <container id="c1" place="single">
            <wgt:form>
                <wgt:query-id>phthisiatryHospReferral</wgt:query-id>
                <wgt:name>Добавить</wgt:name>
                <fs:field-set>
                    <ctrl:classifier id="refType" required="true" label="Тип направления">
                        <ctrl:query query-id="phthisiatryReferralType" label-field-id="name" value-field-id="id"/>
                    </ctrl:classifier>
                    <ctrl:classifier id="recv_organization" label="Принимающая МО" search-are-you-type="true"
                                     required="true" readonly="false">
                        <ctrl:query query-id="phthisiatryMO" label-field-id="name" value-field-id="id"/>
                        <ctrl:show-modal page-id="phthisiatryRecvOrg" result-container-id="org" label-field-id="name"
                                         value-field-id="id"/>
                    </ctrl:classifier>
                    <ctrl:date-time id="referral_date" required="true"/>
                </fs:field-set>
            </wgt:form>
        </container>
    </containers>
</page>