<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-2.0"
      xmlns:fs="http://n2oapp.net/framework/config/schema/fieldset-2.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0">
    <object-id>print_settings</object-id>
    <layout>n2o/layout/single</layout>

    <name>Добавление настройки</name>
    <regions><region place="single" type="none">
        <container id="single">
            <wgt:form>
                <name>Добавление настройки</name>
                <wgt:query-id>print_settings</wgt:query-id>
                <fs:field-set field-label-location="left">
                    <ctrl:hidden id="id"/>
                    <ctrl:input-text id="block1top" label="Блок 1: Отступ сверху, мм" control-style="width:70px;" >
                        <ctrl:validations>
                            <ctrl:validation ref-id="isNumberConditionBlock1top"/>
                        </ctrl:validations>
                    </ctrl:input-text>

                    <ctrl:input-text id="block1left" label="Блок 1: Отступ слева, мм" control-style="width:70px;" >
                        <ctrl:validations>
                            <ctrl:validation ref-id="isNumberConditionBlock1left"/>
                        </ctrl:validations>
                    </ctrl:input-text>

                    <ctrl:input-text id="block2top" label="Блок 2: Отступ сверху, мм" control-style="width:70px;" >
                        <ctrl:validations>
                            <ctrl:validation ref-id="isNumberConditionBlock2top"/>
                        </ctrl:validations>
                    </ctrl:input-text>

                    <ctrl:input-text id="block2left" label="Блок 2: Отступ слева, мм" control-style="width:70px;" >
                        <ctrl:validations>
                            <ctrl:validation ref-id="isNumberConditionBlock2left"/>
                        </ctrl:validations>
                    </ctrl:input-text>

                    <ctrl:input-text id="block3top" label="Блок 3: Отступ сверху, мм" control-style="width:70px;" >
                        <ctrl:validations>
                            <ctrl:validation ref-id="isNumberConditionBlock3top"/>
                        </ctrl:validations>
                    </ctrl:input-text>

                    <ctrl:input-text id="block3left" label="Блок 3: Отступ слева, мм" control-style="width:70px;" >
                        <ctrl:validations>
                            <ctrl:validation ref-id="isNumberConditionBlock3left"/>
                        </ctrl:validations>
                    </ctrl:input-text>

                </fs:field-set>
            </wgt:form>
        </container>
        </region>
    </regions>
</page>
