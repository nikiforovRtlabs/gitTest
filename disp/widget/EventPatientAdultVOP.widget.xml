        <menu-item label="Карточка" id="card" context="true" icon="icon-book" type="textAndIcon" color="btn-success" default="true">
            <open-page page-id="DisprCardVOP" container-id="patientData" master-field-id="id" detail-field-id="id" refresh-on-close="true" />
            <conditions>
                <enabling-condition>
                    <expression>checkDC >= 2</expression>
                    <tooltip>Пациент не прошел анкетирование или антропометрию!</tooltip>
                </enabling-condition>
            </conditions>
        </menu-item>
    </action-menu>
</table>