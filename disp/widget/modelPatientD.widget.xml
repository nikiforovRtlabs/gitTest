<?xml version='1.0' encoding='UTF-8'?>
<table xmlns="http://n2oapp.net/framework/config/schema/n2o-widget-1.0"
       xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0">
    <id>modelPatientD</id>
    <query-id>modelPatientD</query-id>
    <name>Д-учет</name>
    <columns>
        <column column-field-id="registr.name"/>
        <column column-field-id="date"/>
    </columns>
    <action-menu>
        <menu-item id="add" label="Добавить" icon="icon-plus" type="textAndIcon" context="false" >
            <show-modal page-id="modelPatientD" container-id="main" action-id="add" master-field-id="id"
                            detail-field-id="id"/>
        </menu-item>
        <menu-item id="update" label="Изменить" context="true" default="true" icon="icon-pencil" type="textAndIcon">
            <show-modal page-id="modelPatientD" container-id="main" action-id="update" master-field-id="id"
                            detail-field-id="id"/>
        </menu-item>
        <menu-item id="delete" label="Удалить" context="true" icon="icon-remove" type="textAndIcon" >
            <invoke-action action-id="delete">
            </invoke-action>
        </menu-item>
    </action-menu>
</table>