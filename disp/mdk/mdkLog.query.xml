<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-3.0">
    <object-id>mdkLog</object-id>
    <execution>
        <n2o:sql>
            <n2o:items-query>select :select
                from disp.mdk_log a
                where :where
                order by :order
            </n2o:items-query>
            <n2o:count-query>select count(a)
                from disp.mdk_log a
                where :where
            </n2o:count-query>
            <n2o:alias>a</n2o:alias>
        </n2o:sql>
    </execution>

    <fields>
        <field>
            <id>id</id>
            <name>Ид.</name>
            <domain>integer</domain>
            <display/>
            <sorting/>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>eventPatient.id</id>
            <name>Код пациента</name>
            <domain>integer</domain>
            <expression>a.event_patient_id</expression>
            <display/>
            <sorting/>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>eventPatient</id>
            <name>Код пациента</name>
            <domain>String</domain>
            <expression>a.event_patient_id</expression>
            <display/>
            <sorting/>
            <filters>
                <filter type="eq" filter-field="eventPatient">:expression=(:eventPatient::bigint)</filter>
            </filters>
        </field>
        <field>
            <id>data</id>
            <name>Данные</name>
            <domain>string</domain>
            <!-- display нет, т.к. таблица начинает тормозить, для формы есть mdkLogFull.query.xml -->
            <sorting/>
            <filters>
                <filter type="eq" filter-field="data">data ~ :data</filter>
            </filters>
        </field>
        <field>
            <id>errorMessage</id>
            <name>Ошибка</name>
            <domain>string</domain>
            <expression>a.error_message</expression>
            <display/>
            <sorting/>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>status.id</id>
            <name>Статус</name>
            <expression>status</expression>
            <domain>integer</domain>
            <display/>
            <sorting/>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>dt</id>
            <name>Дата</name>
            <domain>date</domain>
            <display/>
            <sorting/>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>stacktrace</id>
            <domain>string</domain>
            <display/>
        </field>

    </fields>
</query>
