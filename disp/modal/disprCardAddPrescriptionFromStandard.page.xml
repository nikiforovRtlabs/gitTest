<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-1.0">
    <name>Выбрать назначение из стандарта</name>
    <object-id>disprCardAdvancedService</object-id>
    <layout>n2o/layout/single</layout>
    <containers>
        <container id="main" place="single">
            <wgt:form detail-field-id="id" master-field-id="id">
                <wgt:id>modelPatientReg</wgt:id>
                <wgt:query-id>disprCardAdvancedService</wgt:query-id>
                <wgt:name>Выбрать назначение из стандарта</wgt:name>
                <wgt:field-set>
                    <ctrl:classifier id="organization" label="Организация" required="true">
                        <ctrl:query query-id="organization" value-field-id="id" label-field-id="short_name"/>
                        <ctrl:default-model>
                            <ctrl:value field-id="id">#{org.id?}</ctrl:value>
                            <ctrl:value field-id="short_name">#{org.name?}</ctrl:value>
                        </ctrl:default-model>
                    </ctrl:classifier>
                    <ctrl:classifier id="standard" label="Стандарт лечения" required="true">
                        <ctrl:query query-id="md_standard" value-field-id="id" label-field-id="name">
                            <ctrl:pre-filters>
                                <ctrl:pre-filter field-id="orgId" ref="organization.id" />
                            </ctrl:pre-filters>
                        </ctrl:query>
                    </ctrl:classifier>
                    <ctrl:classifier label="Назначение" id="prescription" required="true">
                        <ctrl:query query-id="prescription" value-field-id="id" label-field-id="name">
                            <ctrl:pre-filters>
                                <ctrl:pre-filter field-id="standard_id" ref="standard.id"/>
                            </ctrl:pre-filters>
                        </ctrl:query>
                    </ctrl:classifier>
                    <ctrl:classifier id="speciality" label="Специальность">
                        <ctrl:query query-id="speciality" value-field-id="id" label-field-id="name"/>
                    </ctrl:classifier>
                    <ctrl:classifier id="profile" label="Профиль">
                        <ctrl:query query-id="profile" value-field-id="id" label-field-id="name"/>
                    </ctrl:classifier>
                    <ctrl:hidden id="mainId" domain="integer"/>
                </wgt:field-set>
            </wgt:form>
        </container>
    </containers>
</page>