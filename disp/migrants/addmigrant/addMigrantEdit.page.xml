<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-2.0"
      xmlns:fs="http://n2oapp.net/framework/config/schema/fieldset-2.0"
      xmlns:rc="http://atria.cz/app/config/schema/rmis-control-1.0">
    <name>Редактировать пациента</name>
    <object-id>addMigrant</object-id>
    <layout>n2o/layout/left-right</layout>
    <regions>
        <region place="left" type="panel">
            <container id="main">
                <wgt:form>
                    <wgt:id>addMigrant</wgt:id>
                    <wgt:query-id>addMigrant</wgt:query-id>
                    <wgt:default-values-query-id>addMigrantDefault</wgt:default-values-query-id>
                    <wgt:name>Общие данные</wgt:name>
                    <fs:field-set field-label-location="top">
                        <ctrl:date-time id="createDate" required="true" default-value="now()"
                                        css-class="n2o-label-5 n2o-control-7">
                            <ctrl:dependencies>
                                <ctrl:enabling-condition>existsRenderedService != true</ctrl:enabling-condition>
                            </ctrl:dependencies>
                        </ctrl:date-time>
                    </fs:field-set>
                    <fs:field-set field-label-location="top" header="line">
                        <fs:row>
                            <!--<ctrl:custom id="eventId" src="n2o/controls/custom/value/value" label-style="width: 130px" control-style="width: 130px"/>-->
                            <!--<ctrl:custom id="eventPatientId" src="n2o/controls/custom/value/value" label-style="width: 130px" control-style="width: 130px"/>-->
                            <ctrl:custom id="surname" src="n2o/controls/custom/value/value" label-style="width: 130px"
                                         control-style="width: 130px"/>
                            <ctrl:custom id="name" src="n2o/controls/custom/value/value" label-style="width: 130px"
                                         control-style="width: 130px"/>
                            <ctrl:custom id="patrname" src="n2o/controls/custom/value/value" label-style="width: 130px"
                                         control-style="width: 130px"/>
                            <ctrl:custom id="gender" src="n2o/controls/custom/value/value" label-style="width: 70px"
                                         control-style="width: 70px"/>
                            <ctrl:custom id="birthday" src="n2o/controls/custom/value/value" label-style="width: 130px"
                                         control-style="width: 130px"/>
                        </fs:row>
                        <fs:row>
                            <ctrl:input-text id="latinsurname" required="true" label-style="width: 130px"
                                             control-style="width: 130px">
                                <ctrl:validations>
                                    <ctrl:validation ref-id="latinsurnameIsCorrect"/>
                                </ctrl:validations>
                            </ctrl:input-text>
                            <ctrl:input-text id="latinname" required="true" label-style="width: 130px"
                                             control-style="width: 130px">
                                <ctrl:validations>
                                    <ctrl:validation ref-id="latinnameIsCorrect"/>
                                </ctrl:validations>
                            </ctrl:input-text>
                            <ctrl:input-text id="latinpatrname" label-style="width: 130px" control-style="width: 130px">
                                <ctrl:validations>
                                    <ctrl:validation ref-id="latinpatrnameIsCorrect"/>
                                </ctrl:validations>
                            </ctrl:input-text>
                            <ctrl:output-text id="forPatientCardLink" label="" label-style="width: 5px"
                                              control-style="width: 5px">
                                <ctrl:actions>
                                    <ctrl:link label="Перейти на КП">
                                        <ctrl:on-click src="n2o/widgets/custom/addMigrant.js"
                                                       function-name="gotoPatientCard"/>
                                    </ctrl:link>
                                    <ctrl:link label="Обновить">
                                        <ctrl:update-model query-id="addMigrantDefault" master-field-id="patient.id"
                                                           detail-field-id="patient.id"/>
                                    </ctrl:link>
                                </ctrl:actions>
                            </ctrl:output-text>
                        </fs:row>
                    </fs:field-set>
                    <fs:field-set label="Данные пациента" header="line" field-label-location="top">
                        <fs:row>
                            <ctrl:custom id="maritalStatus" src="n2o/controls/custom/value/value"
                                         label-style="width: 150px" control-style="width: 150px"/>
                            <ctrl:custom id="socialStatus" src="n2o/controls/custom/value/value"
                                         label-style="width: 150px" control-style="width: 150px"/>
                            <ctrl:custom id="citizenship" src="n2o/controls/custom/value/value"
                                         label-style="width: 150px" control-style="width: 150px"/>
                            <ctrl:custom id="workplace" src="n2o/controls/custom/value/value" label-style="width: 150px"
                                         control-style="width: 150px"/>
                        </fs:row>
                        <fs:row>
                            <ctrl:custom id="registerAddress" src="n2o/controls/custom/value/value"
                                         label-style="width: 500px" control-style="width: 500px"/>
                        </fs:row>
                        <fs:row>
                            <ctrl:custom id="doc1" src="n2o/controls/custom/value/value" label-style="width: 150px"
                                         control-style="width: 300px"/>
                            <ctrl:custom id="doc2" src="n2o/controls/custom/value/value" label-style="width: 150px"
                                         control-style="width: 300px"/>
                        </fs:row>
                    </fs:field-set>
                    <fs:field-set header="line" field-label-location="top">
                        <fs:row>
                            <ctrl:classifier id="arrivedCountry" label="Прибыл из" required="true"
                                             control-style="width: 250px">
                                <ctrl:query query-id="migrCountry" value-field-id="id" label-field-id="name"/>
                            </ctrl:classifier>
                            <ctrl:classifier id="purpose" label="Цель получения справки" required="true"
                                             control-style="width: 400px">
                                <ctrl:query query-id="migrPurpose" value-field-id="id" label-field-id="name"/>
                            </ctrl:classifier>
                        </fs:row>
                        <fs:row>
                            <ctrl:classifier id="planPeriod" label="Планируемый период пребывания"
                                             control-style="width: 250px" label-style="width: 250px">
                                <ctrl:query query-id="migrPlanPeriod" value-field-id="id" label-field-id="name"/>
                                <ctrl:set-value-expression on="purpose">if (((typeof planPeriod == 'undefined') ||
                                    (typeof planPeriod != 'undefined' &amp;&amp; planPeriod == null) || (typeof
                                    planPeriod != 'undefined' &amp;&amp; planPeriod != null &amp;&amp; planPeriod.id ==
                                    null)) &amp;&amp; (purpose.code == 1)) {var o = new Object(); o.id = 3; o.name = '5
                                    лет'; o;} else throw '!'
                                </ctrl:set-value-expression>
                                <ctrl:set-value-expression on="purpose">if (((typeof planPeriod == 'undefined') ||
                                    (typeof planPeriod != 'undefined' &amp;&amp; planPeriod == null) || (typeof
                                    planPeriod != 'undefined' &amp;&amp; planPeriod != null &amp;&amp; planPeriod.id ==
                                    null)) &amp;&amp; (purpose.code == 2)) {var o = new Object(); o.id = 2; o.name = '3
                                    года'; o;} else throw '!'
                                </ctrl:set-value-expression>
                                <ctrl:set-value-expression on="purpose">if (((typeof planPeriod == 'undefined') ||
                                    (typeof planPeriod != 'undefined' &amp;&amp; planPeriod == null) || (typeof
                                    planPeriod != 'undefined' &amp;&amp; planPeriod != null &amp;&amp; planPeriod.id ==
                                    null)) &amp;&amp; (purpose.code == 3)) {var o = new Object(); o.id = 1; o.name = '1
                                    год'; o;} else throw '!'
                                </ctrl:set-value-expression>
                                <ctrl:set-value-expression on="purpose">if (((typeof planPeriod == 'undefined') ||
                                    (typeof planPeriod != 'undefined' &amp;&amp; planPeriod == null) || (typeof
                                    planPeriod != 'undefined' &amp;&amp; planPeriod != null &amp;&amp; planPeriod.id ==
                                    null)) &amp;&amp; (purpose.code == 4)) {var o = new Object(); o.id = 2; o.name = '3
                                    года'; o;} else throw '!'
                                </ctrl:set-value-expression>
                            </ctrl:classifier>
                            <ctrl:date-time id="period.begin" label="Период с" control-style="width: 150px"
                                            label-style="width: 150px"/>
                            <ctrl:date-time id="period.end" label="по" readonly="true" control-style="width: 150px"
                                            label-style="width: 150px">
                                <ctrl:set-value-expression on="period.begin,planPeriod">if
                                    (period.begin!=null){moment(period.begin, 'DD.MM.YYYY
                                    HH:mm').add(parseInt(planPeriod.name.substr(0, 1)), 'y').format('DD.MM.YYYY HH:mm')}
                                </ctrl:set-value-expression>
                            </ctrl:date-time>
                        </fs:row>
                    </fs:field-set>
                    <wgt:edit after-submit="read">
                        <wgt:invoke-action action-id="addMigrant"/>
                    </wgt:edit>
                    <wgt:action-menu>
                        <wgt:menu-item id="addMigrant" label="Редактировать">
                            <wgt:edit>
                                <wgt:invoke-action action-id="addMigrant"/>
                            </wgt:edit>
                        </wgt:menu-item>
                    </wgt:action-menu>
                </wgt:form>
            </container>
            <container id="documents" depends-on="main">
                <wgt:table ref-id="migrantDocument" detail-field-id="cardId" master-field-id="cardId"/>
            </container>
        </region>
        <region place="right">
            <container id="services" depends-on="main">
                <wgt:form detail-field-id="cardId" master-field-id="cardId">
                    <wgt:id>migrantServices</wgt:id>
                    <wgt:query-id>addMigrantServices</wgt:query-id>
                    <wgt:name>Услуги</wgt:name>
                    <fs:field-set>
                        <fs:row>
                            <ctrl:checkbox-group id="services" label=" " label-style="width: 10px"
                                                 control-style="width: 350px">
                                <ctrl:query query-id="migrEventServices" label-field-id="name" value-field-id="id">
                                    <ctrl:pre-filters>
                                        <ctrl:pre-filter field-id="eventId" ref="eventId"/>
                                    </ctrl:pre-filters>
                                </ctrl:query>
                                <ctrl:validations>
                                    <ctrl:validation ref-id="renderedServicesDisableConstraint"/>
                                    <ctrl:validation ref-id="checkDelService"/>
                                </ctrl:validations>
                            </ctrl:checkbox-group>
                            <ctrl:checkbox-group id="servicesDuplicates" label=" " label-style="width: 10px"
                                                 control-style="width: 130px">
                                <ctrl:query query-id="migrEventServices" label-field-id="duplicate" value-field-id="id">
                                    <ctrl:pre-filters>
                                        <ctrl:pre-filter field-id="eventId" ref="eventId"/>
                                    </ctrl:pre-filters>
                                </ctrl:query>
                                <ctrl:validations>
                                    <ctrl:validation ref-id="checkDuplicate"/>
                                </ctrl:validations>
                            </ctrl:checkbox-group>
                        </fs:row>
                    </fs:field-set>
                    <wgt:edit after-submit="read">
                        <wgt:invoke-action action-id="addMigrantServices"/>
                    </wgt:edit>
                    <wgt:action-menu>
                        <wgt:menu-item id="addMigrantServices" label="Редактировать">
                            <wgt:edit>
                                <wgt:invoke-action action-id="addMigrantServices"/>
                            </wgt:edit>
                        </wgt:menu-item>
                    </wgt:action-menu>
                </wgt:form>
            </container>
        </region>
    </regions>
</page>