<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-1.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:sp="http://n2oapp.net/framework/config/schema/action-stored-procedure-1.0"
        xmlns:sql="http://n2oapp.net/framework/config/schema/action-sql-1.0"
        xsi:schemaLocation="http://n2oapp.net/framework/config/schema/object-1.0 http://localhost:8080/n2o/config/schema/object/object-1.0.xsd">
    <id>modelPatientBenefit</id>
    <name>modelPatientBenefit</name>

    <actions>
        <action id="add" name="Добавить">
            <invocation>
                <sql:sql data-source="jdbc/lsd">
                    insert into disp.md_model_patient_benefit (id, benefit_type_id, benefit_id, model_id, start_date, end_date)
                        values (nextval('disp.md_model_patient_benefit_id_seq'), :benefitTypeId, :benefit,
                                CAST(:modelId as INT), :startDate, :endDate);
                </sql:sql>
            </invocation>
            <in-parameters>
                <param name="benefitType.id" mapping="['benefitTypeId']"/>
                <param name="benefitDef.id" mapping="['benefit']"/>
                <param name="startTime" mapping="['startDate']"/>
                <param name="endTime" mapping="['endDate']"/>
                <param name="modelId" mapping="['modelId']"/>
                <param name="base_model.id" mapping="['baseModel']"/>
            </in-parameters>
        </action>
        <action id="update" name="Изменить">
            <invocation>
                <sql:sql data-source="jdbc/lsd">
                    update disp.md_model_patient_benefit set benefit_type_id=:benefitTypeId, benefit_id=:benefit,
                            model_id=:modelId, start_date=:startDate, end_date=:endDate
                        where id=:id;
                </sql:sql>
            </invocation>
            <in-parameters>
                <param name="id" mapping="['id']"/>
                <param name="benefitType.id" mapping="['benefitTypeId']"/>
                <param name="benefitDef.id" mapping="['benefit']"/>
                <param name="startTime" mapping="['startDate']"/>
                <param name="endTime" mapping="['endDate']"/>
                <param name="modelId" mapping="['modelId']"/>
                <param name="base_model.id" mapping="['baseModel']"/>
            </in-parameters>
        </action>
        <action id="delete" name="Удалить">
            <invocation>
                <sql:sql data-source="jdbc/lsd">
                    delete from disp.md_model_patient_benefit where id = :id;
                </sql:sql>
            </invocation>
            <in-parameters>
                <param name="id" mapping="['id']"/>
                <param name="base_model.id" mapping="['baseModel']"/>
            </in-parameters>
        </action>
    </actions>
</object>