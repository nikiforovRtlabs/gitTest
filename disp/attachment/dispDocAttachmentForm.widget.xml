<form xmlns="http://n2oapp.net/framework/config/schema/n2o-widget-2.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0"
      xmlns:fs="http://n2oapp.net/framework/config/schema/fieldset-2.0">
    <query-id>dispDocAttachment</query-id>
    <name>Вложение</name>
    <fs:field-set>
        <ctrl:file-upload id="attachment"
                          label="Файл"
                          required="true"
                          drop-zone="true"
                          upload-url="${rmis.system.frontend.url}/filestorage/upload/dispServiceAttachment/document"
                          download-url="${rmis.system.frontend.url}/filestorage/download" types="image/*"/>
        <ctrl:text-area id="note" rows="5"/>
    </fs:field-set>
</form>
