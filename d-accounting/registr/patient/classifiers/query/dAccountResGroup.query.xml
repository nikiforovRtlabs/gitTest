<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-2.0"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">

    <object-id>dAccountResGroup</object-id>

    <execution>
        <n2o:sql>
            <n2o:items-query>
                select :select
                FROM sr_res_group sr
                JOIN pim_employee_position epos ON epos.id = sr.responsible_id
                JOIN pim_employee emp ON emp.id = epos.employee_id
                JOIN pim_position pos ON pos.id = epos.position_id
                JOIN pim_individual ind ON ind.id = emp.individual_id
                where :where AND not sr.is_system
                order by :order
            </n2o:items-query>

            <n2o:count-query>
                select count(1)
                FROM sr_res_group sr
                JOIN pim_employee_position epos ON epos.id = sr.responsible_id
                JOIN pim_employee emp ON emp.id = epos.employee_id
                JOIN pim_position pos ON pos.id = epos.position_id
                JOIN pim_individual ind ON ind.id = emp.individual_id
                where :where AND not sr.is_system
            </n2o:count-query>
            <n2o:alias>sr</n2o:alias>
        </n2o:sql>
    </execution>

    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
        </field>

        <field>
            <id>fio</id>
            <name>ФИО</name>
            <domain>string</domain>
            <expression>initcap(concat_ws(' ', ind.surname, ind.name, ind.patr_name))</expression>
        </field>

        <field>
            <id>name</id>
            <name>Имя пациента</name>
            <domain>string</domain>
            <expression>ind.name</expression>
            <search>lower(ind.name) like '%'||lower(:name)||'%'</search>
        </field>

        <field>
            <id>surname</id>
            <name>Фамилия пациента</name>
            <domain>string</domain>
            <expression>ind.surname</expression>
            <search>lower(ind.surname) like '%'||lower(:surname)||'%'</search>
        </field>

        <field>
            <id>patr_name</id>
            <name>Отчество пациента</name>
            <domain>string</domain>
            <expression>ind.patr_name</expression>
            <search>lower(ind.patr_name) like '%'||lower(:patr_name)||'%'</search>
        </field>

        <field>
            <id>birth_dt</id>
            <name>Дата рождения</name>
            <domain>string</domain>
            <expression>to_char(ind.birth_dt, 'DD.MM.YYYY')</expression>
        </field>

        <field>
            <id>birth_date</id>
            <name>Дата рождения</name>
            <domain>date</domain>
            <expression>ind.birth_dt</expression>
        </field>

        <field>
            <id>res.name</id>
            <name>Наименование ресурса</name>
            <domain>string</domain>
            <expression>sr.name</expression>
        </field>

        <field>
            <id>pos.name</id>
            <name>Должность</name>
            <domain>string</domain>
            <expression>pos.name</expression>
            <search>lower(pos.name) like '%'||lower(:pos.name)||'%'</search>
        </field>

        <field>
            <id>epos.id</id>
            <domain>integer</domain>
            <expression>epos.id</expression>
        </field>

        <field>
            <id>org.id</id>
            <domain>integer</domain>
            <expression>emp.organization_id</expression>
        </field>

    </fields>
</query>