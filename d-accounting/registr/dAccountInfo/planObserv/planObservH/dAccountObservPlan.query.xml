<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-2.0"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">

    <object-id>dAccountPlanObserv</object-id>

    <execution>
        <n2o:sql>
            <n2o:items-query>
                select :select
                from d_accounting.observ_plan g
                where :where
                order by :order
            </n2o:items-query>

            <n2o:count-query>
                select count(1)
                from d_accounting.observ_plan g
                where :where
            </n2o:count-query>
            <n2o:alias>g</n2o:alias>
        </n2o:sql>
    </execution>

    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
        </field>

        <field>
            <id>account_id</id>
            <domain>integer</domain>
            <expression>g.account_id</expression>
        </field>

        <field>
            <id>from_dt</id>
            <domain>date</domain>
            <name>Дата начала действия</name>
            <expression>g.from_dt</expression>
        </field>

        <field>
            <id>to_dt</id>
            <name>Дата окончания действия</name>
            <domain>date</domain>
            <expression>g.to_dt</expression>
        </field>

        <field>
            <id>timePeriod.id</id>
            <domain>integer</domain>
            <expression>time_period_id</expression>
        </field>

        <field>
            <id>weekDay.id</id>
            <domain>integer</domain>
            <expression>week_day</expression>
        </field>

    </fields>
</query>