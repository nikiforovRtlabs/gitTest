<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-2.0"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">

    <object-id>dAccountPatActivity</object-id>

    <execution>
        <n2o:sql>
            <n2o:items-query>
                select :select
                from d_accounting.pat_activity g
                where :where
                order by :order
            </n2o:items-query>

            <n2o:count-query>
                select count(1)
                from d_accounting.pat_activity g
                where :where
            </n2o:count-query>
            <n2o:alias>g</n2o:alias>
        </n2o:sql>
    </execution>

    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
        </field>

        <field>
            <id>account.id</id>
            <domain>integer</domain>
            <expression>g.account_id</expression>
        </field>

        <field>
            <id>exec_dt</id>
            <name>Дата совершения</name>
            <domain>date</domain>
            <expression>g.exec_dt</expression>
        </field>

        <field>
            <id>act_type.id</id>
            <domain>integer</domain>
            <expression>g.act_type_id</expression>
        </field>

        <field>
            <id>act_type.name</id>
            <name>Тип совершенного действия</name>
            <domain>integer</domain>
            <expression>(SELECT ps.name FROM d_accounting.activity_type ps WHERE ps.id = g.act_type_id LIMIT 1)</expression>
        </field>

    </fields>
</query>