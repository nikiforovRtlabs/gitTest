<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-3.0"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">
    <!--<id>addr_updModel</id>-->
    <name>Получение распарсенных данных адреса</name>
    <object-id>birth_certificate</object-id>
    <execution>
        <n2o:sql>
            <n2o:items-query>
                select :select
                from public.address_element_data ae
                where :where
                order by :order
            </n2o:items-query>
            <n2o:count-query>
                select count(*)
                from public.address_element_data ae
                where :where
            </n2o:count-query>
            <n2o:alias>ae</n2o:alias>
        </n2o:sql>
    </execution>
    <fields>
        <field>
            <id>bad.id</id>
            <domain>integer</domain>
            <name>Идентификатор</name>
            <display/>
            <expression>ae.id</expression>
            <filters>
                <filter type="eq" filter-field="bad.id">
                    :expression = :bad.id
                </filter>
            </filters>
        </field>
        <field>
            <id>bcitiship.id</id>
            <domain>integer</domain>
            <name>Признак города</name>
            <display/>
            <expression>
                case when ae.is_city is true
                    then (select id from certificates.citizenship_type where e_code = '1')
                    else (select id from certificates.citizenship_type where e_code = '2')
                end
            </expression>
        </field>
        <field>
            <id>bcitiship.name</id>
            <domain>integer</domain>
            <name>Признак города</name>
            <display/>
            <expression>
                case when ae.is_city is true
                    then (select name from certificates.citizenship_type where e_code = '1')
                    else (select name from certificates.citizenship_type where e_code = '2')
                end
            </expression>
        </field>
        <field>
            <id>birth_region</id>
            <domain>string</domain>
            <name>Наименование</name>
            <display/>
            <expression>
                adr__get_element_as_text(ae.id, '(2,s,0)')
            </expression>
        </field>
        <field>
            <id>birth_district</id>
            <domain>string</domain>
            <name>Наименование</name>
            <display/>
            <expression>
                adr__get_element_as_text(ae.id, '(3,s,0)')
            </expression>
        </field>
        <field>
            <id>birth_city</id>
            <domain>string</domain>
            <name>Наименование</name>
            <display/>
            <expression>
                coalesce(adr__get_element_as_text(ae.id, '(4,s,0)'),adr__get_element_as_text(ae.id, '(5,s,0)'))
            </expression>
        </field>
    </fields>
</query>