<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-2.0"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">
    <!--<id>death_place</id>-->
    <name>Место смерти</name>
    <object-id>death_place</object-id>
    <execution>
        <n2o:sql>
            <n2o:items-query>
                select :select
                from certificates.death_place dp
                where :where
                order by :order
            </n2o:items-query>
            <n2o:count-query>
                select count(*)
                from certificates.death_place dp
                where :where
            </n2o:count-query>
            <n2o:alias>dp</n2o:alias>
        </n2o:sql>
    </execution>
    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <name>Идентификатор</name>
            <expression>dp.id</expression>
        </field>
        <field>
            <id>code</id>
            <domain>integer</domain>
            <name>Код</name>
            <expression>cast(trim(dp.code) as integer)</expression>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <name>Наименование</name>
            <expression>dp.name||' ['||dp.code||']'</expression>
            <search>trim(upper(:expression)) like trim(upper('%'||:name||'%'))</search>
            <sorting>cast(trim(dp.code) as integer)</sorting>
        </field>
        <field>
            <id>ecode</id>
            <domain>string</domain>
            <name>Дополнительный код</name>
            <expression>dp.e_code</expression>
            <search>trim(upper(:expression)) like trim(upper(:ecode||'%'))</search>
        </field>
