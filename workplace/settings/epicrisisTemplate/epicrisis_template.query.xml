<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-3.0">
    <object-id>epicrisis_template</object-id>
    <name>epicrisis_template_setting</name>

    <execution>
        <n2o:java-criteria bean-name="epicrisisTemplateService"
                           criteria-class="ru.kirkazan.rmis.app.ehr.api.criteria.EpicrisisTemplateCriteria"/>
    </execution>

    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <expression>id</expression>
            <display/>
            <filters>
                <filter type="eq" filter-field="id">id</filter>
            </filters>
        </field>
        <field>
            <id>clinic.name</id>
            <domain>string</domain>
            <name>МО</name>
            <expression>clinicName</expression>
            <display/>
        </field>
        <field>
            <id>clinic.id</id>
            <domain>integer</domain>
            <expression>clinicId</expression>
            <display/>
            <filters>
                <filter type="eq" filter-field="clinic.id">clinicId</filter>
            </filters>
        </field>
        <field>
            <id>department.name</id>
            <domain>string</domain>
            <name>Подразделение</name>
            <expression>departmentName</expression>
            <display/>
        </field>
        <field>
            <id>department.id</id>
            <domain>integer</domain>
            <expression>departmentId</expression>
            <display/>
            <filters>
                <filter type="eq" filter-field="department.id">departmentId</filter>
            </filters>
        </field>
        <field>
            <id>type.name</id>
            <domain>string</domain>
            <name>Тип</name>
            <expression>typeName</expression>
            <display/>
        </field>
        <field>
            <id>type.id</id>
            <domain>integer</domain>
            <expression>typeId</expression>
            <display/>
            <filters>
                <filter type="eq" filter-field="type.id">typeId</filter>
            </filters>
        </field>
        <field>
            <id>template.name</id>
            <domain>string</domain>
            <name>Шаблон</name>
            <expression>reportName</expression>
            <display/>
        </field>
        <field>
            <id>template.id</id>
            <domain>integer</domain>
            <expression>reportId</expression>
            <display/>
            <filters>
                <filter type="eq" filter-field="template.id">reportId</filter>
            </filters>
        </field>
        <field>
            <id>isSeveralSignatories</id>
            <domain>boolean</domain>
            <expression>severalSignatories</expression>
            <display/>
        </field>
        <field>
            <id>maxInterval</id>
            <domain>integer</domain>
            <display/>
        </field>
        <field>
            <id>specification.id</id>
            <domain>integer</domain>
            <expression>specificationId</expression>
            <display/>
        </field>
        <field>
            <id>specification.name</id>
            <domain>string</domain>
            <expression>specificationName</expression>
            <display/>
        </field>
        <field>
            <id>startDt</id>
            <domain>date</domain>
            <name>Дата нач.</name>
            <display/>
        </field>
        <field>
            <id>endDt</id>
            <domain>date</domain>
            <name>Дата окон.</name>
            <display/>
        </field>
        <field>
            <id>note</id>
            <domain>string</domain>
            <name>Комментарий</name>
            <display/>
        </field>
        <field>
            <id>section</id>
            <domain>object[]</domain>
            <display/>
        </field>
        <field>
            <id>has_epicrisis</id>
            <domain>boolean</domain>
            <expression>hasEpicrisis</expression>
            <display/>
        </field>
        <field>
            <id>copy</id>
            <domain>boolean</domain>
            <filters auto-generate="true"/>
        </field>
    </fields>
</query>
