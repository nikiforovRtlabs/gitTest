<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-3.0"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">
    <!--<id>ageCategory</id>-->
    <object-id>milky_dictionary</object-id>
    <execution>
        <n2o:sql>
            <n2o:items-query>
                select :select
                from public.md_baby_food_age_category cat
                where :where
                order by :order
            </n2o:items-query>
            <n2o:count-query>
                select count(1)
                from public.md_baby_food_age_category cat
                where :where
            </n2o:count-query>
            <n2o:alias>cat</n2o:alias>
        </n2o:sql>
    </execution>
    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <display/>
            <expression>cat.id</expression>
            <filters>
                <filter type="eq" filter-field="id">
                    :expression = :id
                </filter>
            </filters>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <display/>
            <expression>cat.name</expression>
            <filters>
                <filter type="eq" filter-field="name">
                    lower(cat.name) like lower(:name)||'%'
                </filter>
            </filters>
        </field>
        <field>
            <id>full_name</id>
            <domain>string</domain>
            <display/>
            <expression>
                cat.name||' ('||cast(cat.begin_age as varchar(2))||' - '||cast(cat.end_age as varchar(2))||' месяцев)'
            </expression>
            <filters>
                <filter type="eq" filter-field="full_name">
                    lower(cat.name) like '%'||lower(:full_name)||'%'
                </filter>
            </filters>
        </field>
        <field>
            <id>code</id>
            <domain>string</domain>
            <display/>
            <expression>cat.code</expression>
            <filters>
                <filter type="eq" filter-field="code">
                    lower(cat.code) like lower(:code)||'%'
                </filter>
            </filters>
        </field>

        <field>
            <id>month</id>
            <domain>intger</domain>
            <expression>:month</expression>
            <filters>
                <filter type="eq" filter-field="month">
                    cast(:month as integer) >= cat.begin_age and cat.end_age > cast(:month as integer)
                </filter>
            </filters>
        </field>

        <field>
            <id>begin_age</id>
            <domain>integer</domain>
            <display/>
            <expression>cat.begin_age</expression>
            <!--<filters>-->
                <!--<filter type="eq" filter-field="month">-->
                    <!--cast(:month as integer) >= cat.begin_age and cat.end_age > cast(:month as integer)-->
                <!--</filter>-->
            <!--</filters>-->
        </field>
        <field>
            <id>end_age</id>
            <domain>integer</domain>
            <display/>
            <expression>cat.end_age</expression>
            <!--<filters>-->
                <!--<filter type="eq" filter-field="month">-->
                    <!--cast(:month as integer) >= cat.begin_age and cat.end_age > cast(:month as integer)-->
                <!--</filter>-->
            <!--</filters>-->
        </field>

    </fields>

</query>