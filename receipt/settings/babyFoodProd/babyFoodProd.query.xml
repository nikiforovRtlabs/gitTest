<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-3.0"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">
    <!--<id>baby_food_prod</id>-->
    <name>Продукт питания</name>
    <object-id>babyFoodProd</object-id>
    <execution>
        <n2o:sql>
            <n2o:items-query>
                select :select
                from receipt.baby_food_product bfp
                left join public.cmn_measure cm on cm.id = bfp.measure_id
                where :where
                order by :order
            </n2o:items-query>
            <n2o:count-query>
                select count(*)
                from receipt.baby_food_product bfp
                left join public.cmn_measure cm on cm.id = bfp.measure_id
                where :where
            </n2o:count-query>
            <n2o:alias>bfp</n2o:alias>
        </n2o:sql>
    </execution>
    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <name>Идентификатор</name>
            <display/>
            <expression>bfp.id</expression>
            <filters>
                <filter type="eq" filter-field="id">
                    :expression = :id
                </filter>
            </filters>
        </field>
        <field>
            <id>code</id>
            <domain>string</domain>
            <name>Код</name>
            <display/>
            <expression>bfp.code</expression>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <name>Наименование</name>
            <display/>
            <expression>bfp.name</expression>
            <filters>
                <filter type="eq" filter-field="name">
                    trim(upper(:expression)) like trim(upper('%'||:name||'%'))
                </filter>
            </filters>
        </field>

        <field>
            <id>measure.id</id>
            <domain>integer</domain>
            <display/>
            <expression>bfp.measure_id</expression>
        </field>
        <field>
            <id>measure.name</id>
            <domain>string</domain>
            <name>Единицы измерения</name>
            <display/>
            <expression>cm.name</expression>
        </field>
    </fields>
</query>