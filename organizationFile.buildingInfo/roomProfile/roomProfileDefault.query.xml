<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-3.0"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">

    <object-id>roomProfile</object-id>


    <execution>
        <n2o:sql>
            <n2o:items-query>select :select</n2o:items-query>
            <n2o:count-query>select 1</n2o:count-query>
        </n2o:sql>
    </execution>

    <fields>

        <field>
            <id>id</id>
            <domain>integer</domain>
            <expression>null</expression>
            <display/>
        </field>

        <field>
            <id>room.id</id>
            <domain>integer</domain>
            <expression>:room.id</expression>
            <display/>
        </field>

        <field>
            <id>department_id</id>
            <domain>integer</domain>
            <expression>
                (case when :room.id notnull then (select department_id from pim_room where id = :room.id) end)
            </expression>
            <display/>
        </field>




    </fields>

</query>