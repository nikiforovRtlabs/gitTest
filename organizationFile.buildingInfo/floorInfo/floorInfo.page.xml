<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-2.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0"
      xmlns:fs="http://n2oapp.net/framework/config/schema/fieldset-2.0">

    <object-id>floorInfo</object-id>
    <layout>n2o/layout/single</layout>
    <name>Этаж</name>
    <regions>
        <region place="single">
            <container id="main">
                <wgt:form detail-field-id="bld.id" master-field-id="bld.id">
                    <wgt:name>Этаж</wgt:name>
                    <wgt:query-id>floorInfo</wgt:query-id>
                    <fs:field-set>
                        <ctrl:input-text id="code" label="Идентификатор"/>
                        <ctrl:input-text id="index" label="Индекс"/>
                        <ctrl:input-text id="name" label="Наименование этажа"/>
                        <ctrl:input-text id="floor_area" label="Общая площадь (м2)"/>
                        <ctrl:input-text id="effective_area" label="Полезная площадь (м2)"/>
                        <ctrl:date-time id="from_dt" label="Дата начала"/>
                        <ctrl:date-time id="to_dt" label="Дата окончания"/>
                    </fs:field-set>
                </wgt:form>
            </container>
        </region>
    </regions>
</page>
