<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-2.0"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">

    <object-id>hosp_classifier</object-id>

    <execution>
        <n2o:sql>
            <n2o:items-query>
                select :select
                from pim_position_role pr
                join pim_position p on p.role_id = pr.id
                where :where
                group by pr.id, pr.name
                order by pr.name, :order
            </n2o:items-query>
            <n2o:count-query>select count(pr)
                from pim_position_role pr
                join pim_position p on p.role_id = pr.id
                where :where
            </n2o:count-query>
        </n2o:sql>
    </execution>

    <fields>

        <field>
            <id>id</id>
            <domain>integer</domain>
            <expression>pr.id</expression>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <expression>pr.name</expression>
            <search>upper(:expression) like '%'||upper(:name)||'%'</search>
        </field>
        <field>
            <id>organizationId</id>
            <domain>integer</domain>
            <expression>p.organization_id</expression>
            <display unavailable="true"/>
        </field>

    </fields>

</query>