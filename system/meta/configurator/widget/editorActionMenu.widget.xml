<?xml version='1.0' encoding='UTF-8'?>
<wgt:table xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-2.0">
    <wgt:query-id>menu</wgt:query-id>
    <wgt:name>Кнопки</wgt:name>
    <wgt:columns>
        <wgt:column column-field-id="action.label"/>
        <wgt:column column-field-id="action.name"/>
    </wgt:columns>
    <wgt:action-menu>
        <wgt:menu-item id="create" context="false" default="false" icon="icon-plus" type="icon">
            <wgt:show-modal page-id="menuForm" container-id="main" action-id="create"/>
        </wgt:menu-item>
        <wgt:menu-item id="update" context="true" default="true" icon="icon-pencil" type="icon">
            <wgt:show-modal page-id="menuForm" container-id="main" action-id="update"/>
        </wgt:menu-item>
        <wgt:menu-item id="delete" context="true" default="false" icon="icon-remove" type="icon">
            <wgt:invoke-action action-id="delete"/>
        </wgt:menu-item>
    </wgt:action-menu>
</wgt:table>