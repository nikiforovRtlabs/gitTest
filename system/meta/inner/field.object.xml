        <action id="delete">
            <invocation>
                <n2o:java-method bean="fieldService" name="delete">
                    <n2o:arguments>
                        <n2o:argument class="net.n2oapp.framework.api.metadata.global.dao.N2oQuery$Field" name="field"/>
                    </n2o:arguments>
                </n2o:java-method>
            </invocation>
            <in-parameters>
                <param name="localId" mapping="[0].id"/>
