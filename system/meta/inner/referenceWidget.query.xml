    <object-id>referenceWidget</object-id>
    <execution>
        <n2o:java-criteria bean-name="referenceWidgetService"
                           criteria-class="net.n2oapp.framework.config.admin.metadata.manager.object.criteria.WidgetCriteria"/>
    </execution>
    <fields>
        <field>
            <id>pageId</id>
            <domain>String</domain>
        </field>
        <field>
            <id>widgetId</id>
            <domain>String</domain>
        </field>
        <field>
            <id>referenceWidget.id</id>
            <domain>String</domain>
        </field>
        <field>
            <id>referenceWidget.name</id>
            <domain>String</domain>
        </field>
    </fields>
</query>