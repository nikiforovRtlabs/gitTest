<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-2.0"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">
    <name>Поля</name>
    <object-id>field</object-id>
    <execution>
        <n2o:java-criteria bean-name="fieldService"
                           criteria-class="net.n2oapp.framework.config.admin.metadata.manager.object.criteria.FieldCriteria"/>
    </execution>
    <fields>
        <field>
            <id>id</id>
            <domain>String</domain>
            <sorting unavailable="true"/>
        </field>
        <field>
            <id>localId</id>
            <name>Код</name>
            <domain>String</domain>
            <search unavailable="true"/>
            <sorting unavailable="true"/>
        </field>
        <field>
            <id>query.id</id>
            <domain>String</domain>
            <sorting unavailable="true"/>
        </field>
        <field>
            <id>query.name_compiled</id>
            <name>Выборка</name>
            <domain>String</domain>
            <search unavailable="true"/>
            <sorting unavailable="true"/>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <name>Наименование</name>
        </field>
        <field>
            <id>name_compiled</id>
            <domain>string</domain>
            <name>Наименование(код)</name>
            <search>name</search>
        </field>
        <field>
            <id>domain.id</id>
            <domain>string</domain>
        </field>
        <field>
            <id>domain.name</id>
            <name>Тип</name>
            <domain>string</domain>
        </field>
        <field>
            <id>expression</id>
            <domain>string</domain>
            <search unavailable="true"/>
            <name>SQL выражение</name>
        </field>
        <field>
            <id>display</id>
            <domain>string</domain>
            <search unavailable="true"/>
            <name>SQL выражение для столбца</name>
        </field>
        <field>
            <id>search</id>
            <domain>string</domain>
            <search unavailable="true"/>
            <name>SQL выражение для поиска</name>
        </field>
        <field>
            <id>sorting</id>
            <domain>string</domain>
            <search unavailable="true"/>
            <name>SQL выражение для сортировки</name>
        </field>
        <field>
            <id>noDisplay</id>
            <domain>boolean</domain>
            <search unavailable="true"/>
            <name>Поле не отображается</name>
        </field>
        <field>
            <id>noSearch</id>
            <domain>boolean</domain>
            <search unavailable="true"/>
            <name>Поле не используется для поиска</name>
        </field>
        <field>
            <id>noSorting</id>
            <domain>boolean</domain>
            <search unavailable="true"/>
            <name>Поле не используется для сортировки</name>
        </field>
        <field>
            <id>type</id>
            <domain>string</domain>
        </field>
    </fields>
</query>