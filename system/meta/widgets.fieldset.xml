<?xml version='1.0' encoding='UTF-8'?>
<field-set xmlns="http://n2oapp.net/framework/config/schema/fieldset-1.0"
           xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0">
    <id>widgets</id>
    <ctrl:radio-group id="widget" label="Виджет" required="true">
        <ctrl:options>
            <ctrl:option>{"id":"table", "name":"Таблица", "widgetClass":
                "net.n2oapp.framework.api.metadata.global.view.widget.table.N2oTable"}</ctrl:option>
            <ctrl:option>{"id":"form", "name":"Форма", "widgetClass" :
                "net.n2oapp.framework.api.metadata.global.view.widget.N2oForm"}</ctrl:option>
            <ctrl:option>{"id":"tree", "name":"Дерево", "widgetClass" :
                "net.n2oapp.framework.api.metadata.global.view.widget.N2oTree"}</ctrl:option>
            <ctrl:option>{"id":"referencewidget", "name":"Ссылка", "widgetClass" :
                "net.n2oapp.framework.api.metadata.global.view.widget.N2oReferenceWidget"}</ctrl:option>
        </ctrl:options>
        <ctrl:default-model>
            <ctrl:value field-id="id">table</ctrl:value>
        </ctrl:default-model>
    </ctrl:radio-group>
</field-set>