<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-1.0">
    <id>catalog</id>
    <name>Каталог</name>
    <object-id>catalog</object-id>
    <layout>n2o/layout/single</layout>
    <containers result-container="main">
        <container id="main" place="single">
            <wgt:form>
                <wgt:query-id>catalog</wgt:query-id>
                <wgt:field-set>
                    <ctrl:hidden id="parent.id"/>
                    <ctrl:hidden id="id"/>
                    <ctrl:input-text id="parent.name" label="Родительский каталог" readonly="true"/>
                    <ctrl:input-text id="name"/>
                </wgt:field-set>
            </wgt:form>
        </container>
    </containers>
</page>
