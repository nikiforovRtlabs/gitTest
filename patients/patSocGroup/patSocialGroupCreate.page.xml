<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-2.0"
      xmlns:fs="http://n2oapp.net/framework/config/schema/fieldset-2.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0">
    <name>Социальное положение</name>
    <object-id>patSocialGroup</object-id>
    <layout>n2o/layout/single</layout>
    <modal-width>600px</modal-width>
    <containers>
        <container id="main" place="single">
            <wgt:form>
                <wgt:query-id>patSocialGroup</wgt:query-id>
                <wgt:name>Социальное положение</wgt:name>
                <fs:field-set>
                    <ctrl:classifier id="socGroup" label="Социальное положение" required="true" label-style="width:125px;" control-style="width:370px;">
                        <ctrl:query query-id="socialGroup" label-field-id="name" value-field-id="id"/>
                        <ctrl:validations>
                            <ctrl:validation ref-id="checkUniqueSocGroup" side="client,server"/>
                        </ctrl:validations>
                    </ctrl:classifier>
                    <fs:row>
                        <ctrl:date-time id="from_dt" label="Дата начала" format="DD.MM.YYYY" default-value="today()" required="true"
                                        label-style="width:125px;" control-style="width:125px;"/>
                        <ctrl:date-time id="to_dt" label="Дата окончания" format="DD.MM.YYYY"
                                        label-style="width:95px;" control-style="width:125px;">
                            <ctrl:validations>
                                <ctrl:validation ref-id="checkDate" side="client"/>
                            </ctrl:validations>
                        </ctrl:date-time>
                    </fs:row>
                </fs:field-set>
            </wgt:form>
        </container>
    </containers>

</page>
