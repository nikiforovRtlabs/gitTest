<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-3.0">
    <object-id>infoPanel</object-id>
    <name>Информация о пациенте</name>
    <execution>
        <n2o:rest>
            <n2o:query-by-id>${n2o.backend.path}/patients/{id}/info/personal</n2o:query-by-id>
        </n2o:rest>
    </execution>

    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <sorting/>
            <filters>
                <filter type="eq" filter-field="id">:id</filter>
            </filters>
        </field>
        <field>
            <id>insurance</id>
            <domain>string</domain>
            <display>insurance</display>
        </field>
        <field>
            <id>snils</id>
            <domain>string</domain>
            <display>snils</display>
        </field>
        <field>
            <id>document</id>
            <domain>string</domain>
            <display>document</display>
        </field>
        <field>
            <id>regAddress</id>
            <domain>string</domain>
            <display>regAddress</display>
        </field>
        <field>
            <id>actualAddress</id>
            <domain>string</domain>
            <display>actualAddress</display>
        </field>
        <field>
            <id>contact</id>
            <domain>object</domain>
            <display>contact</display>
        </field>
        <field>
            <id>socialGroup</id>
            <domain>string</domain>
            <display>socialGroup</display>
        </field>
        <field>
            <id>benefits</id>
            <domain>string[]</domain>
            <display>benefits</display>
        </field>
        <field>
            <id>workPlace</id>
            <domain>string</domain>
            <display>workPlace</display>
        </field>
        <field>
            <id>patientRegInfo</id>
            <domain>string[]</domain>
            <display>patientRegInfo</display>
        </field>

    </fields>
</query>