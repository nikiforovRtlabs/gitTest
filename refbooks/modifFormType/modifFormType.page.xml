<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-2.0"
      xmlns:fs="http://n2oapp.net/framework/config/schema/fieldset-2.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0">
    <object-id>modifFormType</object-id>
    <layout>n2o/layout/single</layout>
    <name>Форма выпуска</name>

    <regions>
        <region place="single" type="none">
            <container id="main">
                <wgt:form detail-field-id="id" master-field-id="id">
                    <wgt:query-id>modifFormType</wgt:query-id>
                    <fs:field-set field-label-location="left">
                        <ctrl:input-text id="shortName" label="Краткое наименование" required="true" css-class="n2o-label-5 n2o-control-9"/>
                        <ctrl:input-text id="fullName" label="Полное наименование" required="true" css-class="n2o-label-5 n2o-control-9"/>
                    </fs:field-set>
                </wgt:form>
            </container>
        </region>
    </regions>

</page>
