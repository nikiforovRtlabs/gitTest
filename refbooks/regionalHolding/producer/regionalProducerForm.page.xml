<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-2.0"
      xmlns:fs="http://n2oapp.net/framework/config/schema/fieldset-2.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0">
    <object-id>regionalProducer</object-id>
    <layout>n2o/layout/single</layout>

    <containers>
        <container id="main" place="single">
            <wgt:form detail-field-id="id" master-field-id="id">
                <wgt:name>Производитель</wgt:name>
                <wgt:query-id>regionalProducerForm</wgt:query-id>
                <fs:field-set ref-id="producer" field-label-location="top"/>
                <fs:field-set field-label-location="top">
                    <fs:row>
                        <ctrl:input-text id="zdravCode" label-style="width:270px"/>
                        <ctrl:checkbox id="isActive"/>
                    </fs:row>
                </fs:field-set>
            </wgt:form>
        </container>
    </containers>
</page>