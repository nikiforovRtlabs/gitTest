<query xmlns="http://n2oapp.net/framework/config/schema/query-2.0"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0">
    <object-id>modification</object-id>
    <execution>
        <n2o:sql>
            <n2o:items-query>select :select
                from inventory.hold_modif m
                left outer join inventory.holding h on h.id= m.holding_id
                where :where
                order by :order
            </n2o:items-query>
            <n2o:count-query>select count(m)
                from inventory.hold_modif m
                left outer join inventory.holding h on h.id= m.holding_id
                where :where
            </n2o:count-query>
            <n2o:alias>m</n2o:alias>
        </n2o:sql>
    </execution>
    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
        </field>
        <field>
            <id>code</id>
            <domain>string</domain>
        </field>
        <field>
            <id>codeTfoms</id>
            <domain>string</domain>
            <expression>code_tfoms</expression>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <expression>m.name</expression>
        </field>
        <field>
            <id>latinName</id>
            <domain>string</domain>
            <expression>m.latin_name</expression>
        </field>
        <field>
            <id>commonPrototype.id</id>
            <domain>integer</domain>
            <expression>m.common_prototype_id</expression>
        </field>
        <field>
            <id>form.id</id>
            <domain>integer</domain>
            <expression>m.form_type_id</expression>
        </field>
        <field>
            <id>mnei.id</id>
            <domain>integer</domain>
            <name>Основная ед.изм</name>
            <expression>m.mnei_id</expression>
        </field>
        <field>
            <id>extraPackUnit.id</id>
            <domain>integer</domain>
            <name>ед.изм. доп. упаковки</name>
            <expression>m.extra_pack_unit_id</expression>
        </field>
        <field>
            <id>mneiCountInExtraPk</id>
            <domain>integer</domain>
            <name>кол-во в доп. упаковке</name>
            <expression>m.mnei_count_in_extra_pk</expression>
        </field>
        <field>
            <id>secPackUnit.id</id>
            <domain>integer</domain>
            <name>ед.изм. втор. упаковки</name>
            <expression>m.sec_pack_unit_id</expression>
        </field>
        <field>
            <id>mneiCountInSecPk</id>
            <domain>integer</domain>
            <name>кол-во во втор. упаковке</name>
            <expression>m.mnei_count_in_sec_pk</expression>
        </field>
        <field>
            <id>holding.id</id>
            <domain>integer</domain>
            <expression>m.holding_id</expression>
        </field>
        <field>
            <id>holding.name</id>
            <domain>string</domain>
            <expression>h.name</expression>
        </field>
        <field>
            <id>holding.latinName</id>
            <domain>string</domain>
            <expression>h.latin_name</expression>
        </field>
        <field>
            <id>inn.id</id>
            <domain>integer</domain>
            <expression>(select inn_id from inventory.holding h where h.id=m.holding_id)</expression>
        </field>
        <field>
            <id>org.id</id>
            <domain>integer</domain>
            <expression>m.org_owner_id</expression>
        </field>
        <field>
            <id>actVal</id>
            <domain>string</domain>
            <expression>(select p.value from inventory.form_param_value p
                 where p.form_param_id=1 and p.hold_modif_id=m.id)
            </expression>
        </field>
        <field>
            <id>actUnit.id</id>
            <domain>integer</domain>
            <expression>(select p.unit_id from inventory.form_param_value p
                where p.form_param_id=1 and p.hold_modif_id=m.id)
            </expression>
        </field>
        <field>
            <id>concentrVal</id>
            <domain>string</domain>
            <expression>(select p.value from inventory.form_param_value p
                where p.form_param_id=2 and p.hold_modif_id=m.id)
            </expression>
        </field>
        <field>
            <id>concentrUnit.id</id>
            <domain>integer</domain>
            <expression> (select p.unit_id from inventory.form_param_value p
                where p.form_param_id=2 and p.hold_modif_id=m.id)
            </expression>
        </field>
        <field>
            <id>dosageVal</id>
            <domain>string</domain>
            <expression>(select p.value from inventory.form_param_value p
                where p.form_param_id=3 and p.hold_modif_id=m.id)
            </expression>
        </field>
        <field>
            <id>dosageUnit.id</id>
            <domain>integer</domain>
            <expression>(select p.unit_id from inventory.form_param_value p
                where p.form_param_id=3 and p.hold_modif_id=m.id)
            </expression>
        </field>
        <field>
            <id>volumeVal</id>
            <domain>string</domain>
            <expression>(select p.value from inventory.form_param_value p
                where p.form_param_id=4 and p.hold_modif_id=m.id)
            </expression>
        </field>
        <field>
            <id>volumeUnit.id</id>
            <domain>integer</domain>
            <expression>(select p.unit_id from inventory.form_param_value p
                where p.form_param_id=4 and p.hold_modif_id=m.id)
            </expression>
        </field>
        <field>
            <id>massVal</id>
            <domain>string</domain>
            <expression>(select p.value from inventory.form_param_value p
                where p.form_param_id=5 and p.hold_modif_id=m.id)
            </expression>
        </field>
        <field>
            <id>massUnit.id</id>
            <domain>integer</domain>
            <expression>(select p.unit_id from inventory.form_param_value p
                where p.form_param_id=5 and p.hold_modif_id=m.id)
            </expression>
        </field>
        <field>
            <id>priceUnitFlag.id</id>
            <domain>integer</domain>
            <expression>m.price_unit_flag</expression>
        </field>
        <field>
            <id>existsInbatch</id>
            <domain>boolean</domain>
            <expression>(select exists(select 1 from inventory.batch p where p.hold_modif_id=m.id))</expression>
        </field>
        <field>
            <id>substituteExists</id>
            <domain>boolean</domain>
            <expression>(select exists(select 1 from inventory.modif_substitute s where s.modif_id=m.id))</expression>
        </field>
        <field>
            <id>storageCond.id</id>
            <domain>integer</domain>
            <expression>m.storage_cond</expression>
        </field>
        <field>
            <id>isExtemporal</id>
            <domain>boolean</domain>
            <expression>m.is_extemporal</expression>
        </field>
        <field>
            <id>writeOffUnitFlag.id</id>
            <domain>boolean</domain>
            <expression>m.write_off_unit_flag</expression>
        </field>
        <field>
            <id>angroFlag</id>
            <domain>boolean</domain>
            <expression>m.angro_flag</expression>
        </field>
        <field>
            <id>medPurposeFlag</id>
            <domain>integer</domain>
            <expression>m.medicinal_purpose_flag</expression>
        </field>
        <field>
            <id>dloFlag</id>
            <domain>boolean</domain>
            <expression>m.dlo_flag</expression>
        </field>
        <field>
            <id>numberOfDoses</id>
            <domain>string</domain>
            <expression>m.number_of_doses</expression>
        </field>
    </fields>
</query>