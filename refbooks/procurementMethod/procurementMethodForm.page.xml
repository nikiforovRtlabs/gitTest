<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-2.0"
      xmlns:fs="http://n2oapp.net/framework/config/schema/fieldset-2.0"
      xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-control-1.0">

    <object-id>procurementMethod</object-id>
    <layout>n2o/layout/single</layout>

    <containers>
        <container id="main" place="single">
            <wgt:form detail-field-id="id" master-field-id="id">
                <wgt:name>Способ закупки</wgt:name>
                <wgt:query-id>procurementMethod</wgt:query-id>
                <fs:field-set>
                    <n2o:input-text id="code"/>
                    <n2o:input-text id="name" required="true"/>
                </fs:field-set>
            </wgt:form>
        </container>
    </containers>
</page>