<element xmlns="http://atria.cz/sec/config/schema/element-1.0"
         xmlns:n2o="http://atria.cz/sec/config/schema/n2o-permission-1.0"
         id="birthCertificates" name="Родовые сертификаты">

    <permission id="readBirthCertificates" name="Добавление сертификата" group-id="read" >
        <n2o:object-access object-id="birthCertificates" />
    </permission>
    <!-- Добавление-->
    <permission id="createBirthCertificates" name="Добавление сертификата" group-id="create">
        <n2o:object-access object-id="birthCertificates" actions="save"/>
    </permission>

    <!-- Редактирование-->
    <permission id="updateBirthCertificates" name="Редактирование сертификата" group-id="update">
        <n2o:object-access object-id="birthCertificates" actions="save"/>
    </permission>

    <!-- Удаление-->
    <permission id="deleteBirthCertificates" name="Удаление сертификата" group-id="delete">
        <n2o:object-access object-id="birthCertificates" actions="delete"/>
    </permission>
</element>