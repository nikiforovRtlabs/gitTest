<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-1.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0">
    <name>Связанный ответ</name>
    <object-id>ambulance_answer</object-id>
    <layout>n2o/layout/single</layout>
    <containers>
        <container id="single" place="single">
            <wgt:form>
                <wgt:name>Ответ</wgt:name>
                <wgt:query-id>ambulance_answer</wgt:query-id>
                <wgt:field-set>
                    <ctrl:input-text id="id" visible="false"/>
                    <ctrl:classifier id="answer" label="Ответ" autoselect-alone="true">
                        <ctrl:query query-id="ambulance_answer" value-field-id="id" label-field-id="name"/>
                    </ctrl:classifier>
                </wgt:field-set>
            </wgt:form>
        </container>
    </containers>
</page>