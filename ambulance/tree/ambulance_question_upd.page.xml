<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-2.0"
      xmlns:fs="http://n2oapp.net/framework/config/schema/fieldset-2.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0">
    <name>Карточка вопроса</name>
    <object-id>ambulance_question</object-id>
    <layout>n2o/layout/single</layout>

    <containers>
        <container id="single" place="single">
            <wgt:form>
                <wgt:name>Вопросы</wgt:name>
                <wgt:query-id>ambulance_question</wgt:query-id>
                <fs:field-set>
                    <ctrl:input-text id="question_text" required="true" length="100"/>
                    <ctrl:checkbox id="is_first_question" default-value="false"/>
                </fs:field-set>
            </wgt:form>
        </container>
    </containers>
</page>