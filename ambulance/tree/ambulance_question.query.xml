<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xsi:schemaLocation="http://n2oapp.net/framework/config/schema/query-1.0 http://localhost:8080/n2o/config/schema/query/query-1.0.xsd">
    <!--<id>transport_type</id>-->
    <name>Вопросы</name>
    <object-id>ambulance_question</object-id>
    <execution>
        <n2o:sql>
            <n2o:items-query> select :select
                from amb.md_ambulance_question aq
                where :where
                order by :order
            </n2o:items-query>
            <n2o:count-query>select count(*)
                from amb.md_ambulance_question aq
                where :where
            </n2o:count-query>
            <n2o:alias>aq</n2o:alias>
        </n2o:sql>
    </execution>
    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <name>Идентификатор</name>
            <expression>aq.id</expression>
        </field>
        <field>
            <id>question_text</id>
            <domain>string</domain>
            <name>Текст вопроса</name>
            <expression>aq.question_text</expression>
            <search>trim(upper(:expression)) like trim(upper('%'||:question_text||'%'))</search>
        </field>
        <field>
            <id>is_first_question</id>
            <domain>boolean</domain>
            <name>Признак первого вопроса</name>
            <expression>aq.is_first_question</expression>
        </field>
    </fields>
</query>