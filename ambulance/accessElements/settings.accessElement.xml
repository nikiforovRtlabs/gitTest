<element xmlns="http://atria.cz/sec/config/schema/element-1.0"
          xmlns:n2o="http://atria.cz/sec/config/schema/n2o-permission-1.0"
          id="settings" name="Настройки СМП">
    <permission id="readSettings" name="Просмотр" group-id="read">
        <n2o:object-access object-id="change_setting"/>
        <n2o:object-access object-id="notes_setting"/>
        <n2o:object-access object-id="time_control"/>
        <n2o:object-access object-id="num_setting"/>
        <n2o:object-access object-id="route"/>
        <n2o:object-access object-id="route_area"/>
        <n2o:object-access object-id="route_service"/>
        <n2o:object-access object-id="pim_org_dangerous_area"/>
        <n2o:object-access object-id="redirect_settings"/>
        <n2o:object-access object-id="department_report_settings"/>
        <n2o:object-access object-id="clinic_report_settings"/>
        <n2o:object-access object-id="addr_def_level_setting"/>
    </permission>
    <permission id="readChange" name="Просмотр смен" group-id="read">
        <n2o:object-access object-id="change"/>
                           <!--actions="forced_open"/>-->

        <!--<n2o:menu-access page="change" container="change" menu-items="forced_open"/>-->
    </permission>

    <permission id="createSettings" name="Создание" group-id="create">
        <n2o:object-access object-id="change_setting" actions="create"/>
        <n2o:object-access object-id="notes_setting" actions="create"/>
        <n2o:object-access object-id="time_control" actions="create"/>
        <n2o:object-access object-id="num_setting" actions="create"/>
        <n2o:object-access object-id="route" actions="create"/>
        <n2o:object-access object-id="route_area" actions="create"/>
        <n2o:object-access object-id="route_service" actions="create"/>
        <n2o:object-access object-id="pim_org_dangerous_area" actions="create"/>
        <n2o:object-access object-id="redirect_settings" actions="create"/>
        <n2o:object-access object-id="department_report_settings" actions="create"/>
        <n2o:object-access object-id="clinic_report_settings" actions="create"/>
        <n2o:object-access object-id="addr_def_level_setting" actions="create"/>
    </permission>
    <permission id="createChange" name="Продвижение смен" group-id="create">
        <n2o:object-access object-id="change" actions="forced_open"/>
        <n2o:object-access object-id="change_setting" actions="forced_open"/>
        <n2o:object-access object-id="bum_numbers" actions="create"/>
    </permission>
    
    <permission id="updateSettings" name="Редактирование" group-id="update">
        <n2o:object-access object-id="change_setting" actions="update"/>
        <n2o:object-access object-id="notes_setting" actions="update"/>
        <n2o:object-access object-id="time_control" actions="update"/>
        <n2o:object-access object-id="num_setting" actions="update"/>
        <n2o:object-access object-id="route" actions="update"/>
        <n2o:object-access object-id="route_area" actions="update"/>
        <n2o:object-access object-id="route_service" actions="update"/>
        <n2o:object-access object-id="pim_org_dangerous_area" actions="update"/>
        <n2o:object-access object-id="redirect_settings" actions="update"/>
        <n2o:object-access object-id="department_report_settings" actions="update"/>
        <n2o:object-access object-id="clinic_report_settings" actions="update"/>
        <n2o:object-access object-id="addr_def_level_setting" actions="update"/>
    </permission>    

    <permission id="deleteSettings" name="Удаление" group-id="delete">
        <n2o:object-access object-id="change_setting" actions="delete"/>
        <n2o:object-access object-id="notes_setting" actions="delete"/>
        <n2o:object-access object-id="time_control" actions="delete"/>
        <n2o:object-access object-id="num_setting" actions="delete"/>
        <n2o:object-access object-id="route" actions="delete"/>
        <n2o:object-access object-id="route_area" actions="delete"/>
        <n2o:object-access object-id="route_service" actions="delete"/>
        <n2o:object-access object-id="pim_org_dangerous_area" actions="delete"/>
        <n2o:object-access object-id="redirect_settings" actions="delete"/>
        <n2o:object-access object-id="department_report_settings" actions="delete"/>
        <n2o:object-access object-id="clinic_report_settings" actions="delete"/>
        <n2o:object-access object-id="addr_def_level_setting" actions="delete"/>
    </permission>
</element>