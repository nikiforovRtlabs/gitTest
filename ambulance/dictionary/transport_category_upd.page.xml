<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-2.0"
      xmlns:fs="http://n2oapp.net/framework/config/schema/fieldset-2.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0">
    <!--<id>transport_category_upd</id>-->
    <name>Категория ТС</name>
    <object-id>transport_category</object-id>
    <layout>n2o/layout/single</layout>
    <!--<modal-width>500px</modal-width>-->
    <containers>
        <container id="single" place="single">
            <wgt:form>
                <wgt:name>Категория ТС</wgt:name>
                <wgt:query-id>transport_category</wgt:query-id>
                <fs:field-set>
                    <ctrl:input-text id="id" readonly="true" length="10"/>
                    <ctrl:input-text id="code" required="true">
                        <ctrl:validations>
                            <ctrl:validation ref-id="transcatcodeUnique"/>
                        </ctrl:validations>
                    </ctrl:input-text>
                    <ctrl:input-text id="name" required="true">
                        <ctrl:validations>
                            <ctrl:validation ref-id="transcatnameUnique"/>
                        </ctrl:validations>
                    </ctrl:input-text>
                    <ctrl:input-text id="ecode">
                        <ctrl:validations>
                            <ctrl:validation ref-id="transcatecodeUnique"/>
                        </ctrl:validations>
                    </ctrl:input-text>
                </fs:field-set>
            </wgt:form>
        </container>
    </containers>
</page>