<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-2.0">
    <object-id>systemNotification</object-id>
    <execution>
        <n2o:rest>
            <n2o:query-by-id>${n2o.backend.path}/notification/system/{id}</n2o:query-by-id>
            <n2o:response-mapping collection="collection" count="count"/>
            <n2o:date-format>dd.MM.yyy</n2o:date-format>
        </n2o:rest>
    </execution>

    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <search>:id</search>
        </field>
        <field>
            <id>name</id>
            <name>Наименование</name>
            <domain>String</domain>
            <display>name</display>
        </field>
        <field>
            <id>enabled</id>
            <name>Включено</name>
            <domain>boolean</domain>
            <display>enabled</display>
        </field>
        <field>
            <id>event.id</id>
            <domain>string</domain>
            <display>eventId</display>
        </field>
        <field>
            <id>consumer.id</id>
            <domain>integer</domain>
            <display>consumerId</display>
        </field>
        <field>
            <id>recipientQuery</id>
            <domain>string</domain>
            <name>Получатели</name>
            <display>recipientQuery</display>
        </field>
        <field>
            <id>conditionId</id>
            <domain>integer</domain>
            <display>conditionId</display>
        </field>
        <field>
            <id>conditionExpression</id>
            <name>Условия отправки оповещения</name>
            <domain>string</domain>
            <display>conditionExpression</display>
        </field>
        <field>
            <id>messageBySelect</id>
            <name>Выбирать текст оповещения запросом</name>
            <domain>boolean</domain>
            <display>messageBySelect</display>
        </field>
        <field>
            <id>messageQuerySelect</id>
            <name>Запрос поиска текста оповещения</name>
            <domain>string</domain>
            <display>messageQuerySelect</display>
        </field>
        <field>
            <id>messageQueryParams</id>
            <name>Набор параметров</name>
            <domain>string</domain>
            <display>messageQueryParams</display>
        </field>
        <field>
            <id>messageId</id>
            <domain>integer</domain>
            <display>messageId</display>
        </field>
        <field>
            <id>actionId</id>
            <domain>integer</domain>
            <display>actionId</display>
        </field>
        <field>
            <id>caption</id>
            <name>Заголовок</name>
            <domain>string</domain>
            <display>caption</display>
        </field>
        <field>
            <id>level.id</id>
            <domain>integer</domain>
            <display>levelId</display>
        </field>
        <field>
            <id>alertType.id</id>
            <domain>integer</domain>
            <display>alertTypeId</display>
        </field>
        <field>
            <id>text</id>
            <name>Текст оповещения</name>
            <domain>string</domain>
            <display>text</display>
        </field>
        <field>
            <id>recipientTypeId</id>
            <domain>integer</domain>
            <display>recipientTypeId</display>
        </field>
        <field>
            <id>description</id>
            <name>Описание</name>
            <domain>string</domain>
            <display>description</display>
        </field>
    </fields>

</query>
